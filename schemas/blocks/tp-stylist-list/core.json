{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "blockName": "tpgb/tp-stylist-list",
  "title": "Stylish List - Core Attributes",
  "description": "Core content and structure attributes",
  "attributes": {
    "block_id": {
      "type": "string",
      "required": true,
      "description": "Unique 4-character hex identifier for the block"
    },
    "listsRepeater": {
      "type": "array",
      "default": [],
      "description": "Array of list items",
      "repeaterField": {
        "description": {
          "type": "string",
          "default": "List item",
          "description": "List item text content"
        },
        "selectIcon": {
          "type": "string",
          "default": "fontawesome",
          "enum": [
            "fontawesome",
            "image"
          ],
          "description": "Icon type: Font Awesome or custom image"
        },
        "iconFontawesome": {
          "type": "string",
          "default": "fas fa-check-circle",
          "description": "Font Awesome icon class for bullet/marker"
        },
        "iconImg": {
          "type": "object",
          "default": {
            "url": ""
          },
          "description": "Custom icon image upload"
        },
        "descurl": {
          "type": "object",
          "default": {
            "url": "",
            "target": "",
            "nofollow": ""
          },
          "description": "Optional link for list item"
        },
        "hintText": {
          "type": "string",
          "default": "",
          "description": "Hint/badge text (e.g., 'New', 'Pro', 'Popular')"
        },
        "hintColor": {
          "type": "string",
          "description": "Hint badge text color"
        },
        "hintBgColor": {
          "type": "string",
          "description": "Hint badge background color"
        },
        "hoverBgItem": {
          "type": "string",
          "description": "Hover background color for this item"
        },
        "tooltipText": {
          "type": "string",
          "default": "",
          "description": "Tooltip text on hover"
        },
        "tooltipTypo": {
          "type": "object",
          "default": {
            "openTypography": 0
          },
          "description": "Typography for tooltip"
        }
      }
    }
  },
  "required": [
    "block_id"
  ],
  "editingGuidelines": {
    "safeToModify": [
      "listsRepeater (add/edit/remove items)",
      "hover_bg_style"
    ],
    "requiresValidation": [],
    "dangerous": [
      "block_id"
    ]
  },
  "usesContext": [],
  "supports": {
    "align": [
      "wide",
      "full"
    ]
  },
  "innerBlocksAllowed": false,
  "parentBlockRequired": false
}