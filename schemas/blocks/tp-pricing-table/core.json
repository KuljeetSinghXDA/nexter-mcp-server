{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "blockName": "tpgb/tp-pricing-table",
  "title": "Pricing Table - Core Attributes",
  "description": "Core content and structure attributes",
  "attributes": {
    "block_id": {
      "type": "string",
      "required": true,
      "description": "Unique 4-character hex identifier for the block"
    },
    "style": {
      "type": "string",
      "default": "style-1",
      "description": "Overall visual style variant for pricing table"
    },
    "titleStyle": {
      "type": "string",
      "default": "style-1",
      "description": "Title section style variant"
    },
    "title": {
      "type": "string",
      "default": "Professional",
      "description": "Plan/package title"
    },
    "subTitle": {
      "type": "string",
      "default": "Designed for Agency",
      "description": "Plan subtitle or tagline"
    },
    "titleAlign": {
      "type": "object",
      "default": "",
      "description": "Text alignment for title and subtitle",
      "responsive": true
    },
    "iconType": {
      "type": "string",
      "default": "none",
      "enum": [
        "none",
        "icon",
        "img"
      ],
      "description": "Icon type for pricing table header"
    },
    "iconStore": {
      "type": "string",
      "default": "fas fa-home",
      "description": "Font Awesome icon class"
    },
    "imgStore": {
      "type": "object",
      "default": {
        "url": ""
      },
      "description": "Custom icon/image"
    },
    "priceStyle": {
      "type": "string",
      "default": "style-1",
      "description": "Price section style variant"
    },
    "preText": {
      "type": "string",
      "default": "$",
      "description": "Currency symbol or prefix text"
    },
    "priceValue": {
      "type": "string",
      "default": "99.99",
      "description": "Price amount"
    },
    "postText": {
      "type": "string",
      "default": "Per Year",
      "description": "Price suffix (e.g., per month, per year)"
    },
    "disPrePrice": {
      "type": "boolean",
      "default": false,
      "description": "Show previous/discounted price (strikethrough)"
    },
    "prevPreText": {
      "type": "string",
      "default": "$",
      "description": "Previous price currency symbol"
    },
    "prevPriceValue": {
      "type": "string",
      "default": "199.99",
      "description": "Previous/original price amount"
    },
    "prevPostText": {
      "type": "string",
      "default": "",
      "description": "Previous price suffix"
    },
    "contentStyle": {
      "type": "string",
      "default": "wysiwyg",
      "enum": [
        "wysiwyg",
        "stylish"
      ],
      "description": "Content display style: WYSIWYG editor or stylish list"
    },
    "conListStyle": {
      "type": "string",
      "default": "style-1",
      "description": "Stylish list variant (when contentStyle is 'stylish')"
    },
    "stylishList": {
      "type": "array",
      "default": [],
      "description": "Feature list items for stylish list mode",
      "repeaterField": {
        "listDesc": {
          "type": "string",
          "description": "Feature text"
        },
        "listIcon": {
          "type": "string",
          "description": "Feature icon"
        },
        "showIcon": {
          "type": "boolean",
          "description": "Show/hide icon for this item"
        }
      }
    }
  },
  "required": [
    "block_id"
  ],
  "editingGuidelines": {
    "safeToModify": [
      "title",
      "subTitle",
      "preText",
      "priceValue",
      "postText",
      "prevPriceValue",
      "titleAlign",
      "priceAlign",
      "disPrePrice",
      "stylishList",
      "iconStore"
    ],
    "requiresValidation": [
      "style",
      "titleStyle",
      "priceStyle",
      "contentStyle",
      "conListStyle",
      "iconType"
    ],
    "dangerous": [
      "block_id"
    ]
  },
  "usesContext": [],
  "supports": {
    "align": [
      "wide",
      "full"
    ]
  },
  "innerBlocksAllowed": true,
  "parentBlockRequired": false
}