{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "blockName": "tpgb/tp-progress-bar",
  "title": "Progress Bar - Styling Attributes",
  "description": "Visual styling, typography, effects, and positioning",
  "attributes": {
    "heightType": {
      "type": "string",
      "default": "small-height",
      "enum": [
        "small-height",
        "large-height"
      ],
      "description": "Bar height: small (thin bar) or large (thick bar with inline content)"
    },
    "pieCircleSize": {
      "type": "string",
      "default": "200",
      "description": "Pie/circle chart size in pixels"
    },
    "pieFillColor": {
      "type": "string",
      "default": "normal",
      "enum": [
        "normal",
        "gradient"
      ],
      "description": "Pie chart fill color mode"
    },
    "pieColor1": {
      "type": "string",
      "default": "#FFA500",
      "description": "Primary pie chart color"
    },
    "pieColor2": {
      "type": "string",
      "default": "#008000",
      "description": "Secondary pie chart color (for gradient)"
    },
    "sPosition": {
      "type": "string",
      "default": "afterNumber",
      "enum": [
        "beforeNumber",
        "afterNumber"
      ],
      "description": "Symbol position relative to number"
    },
    "imageSize": {
      "type": "string",
      "default": "thumbnail",
      "description": "WordPress image size preset"
    },
    "imgPosition": {
      "type": "string",
      "default": "beforeTitle",
      "enum": [
        "beforeTitle",
        "afterTitle"
      ],
      "description": "Icon/image position relative to title"
    },
    "pbTopMargin": {
      "$ref": "definitions://responsive-unit"
    },
    "bgColor": {
      "$ref": "definitions://background"
    },
    "emptyColor": {
      "type": "string",
      "default": "",
      "description": "Empty/unfilled bar background color"
    },
    "sepColor": {
      "type": "string",
      "default": "",
      "description": "Separator color (for style-2)"
    },
    "titleTypo": {
      "$ref": "definitions://typography"
    },
    "titleColor": {
      "type": "string",
      "default": "",
      "description": "Title text color"
    },
    "subTitleTypo": {
      "$ref": "definitions://typography"
    },
    "subTitleColor": {
      "type": "string",
      "default": "",
      "description": "Subtitle text color"
    },
    "numTypo": {
      "$ref": "definitions://typography"
    },
    "numberColor": {
      "type": "string",
      "default": "",
      "description": "Percentage number color"
    },
    "numPrePostTypo": {
      "$ref": "definitions://typography"
    },
    "numPrePostColor": {
      "type": "string",
      "default": "",
      "description": "Symbol color"
    },
    "iconColor": {
      "type": "string",
      "default": "",
      "description": "Font Awesome icon color"
    },
    "iconSize": {
      "$ref": "definitions://responsive-unit"
    },
    "imgSize": {
      "$ref": "definitions://responsive-unit"
    },
    "imgBRadius": {
      "$ref": "definitions://responsive-unit"
    }
  },
  "editingGuidelines": {
    "safeToModify": [
      "Title",
      "subTitle",
      "dynamicValue",
      "dynamicPieValue",
      "prepostSymbol",
      "IconName",
      "bgColor",
      "emptyColor",
      "titleColor",
      "subTitleColor",
      "numberColor",
      "iconColor",
      "pieColor1",
      "pieColor2",
      "titleTypo",
      "subTitleTypo",
      "numTypo",
      "iconSize"
    ],
    "requiresValidation": [
      "layoutType",
      "styleType",
      "heightType",
      "pieStyleType",
      "iconType",
      "sPosition",
      "imgPosition"
    ]
  },
  "styleDependencies": [
    "Progress bar animation CSS",
    "Circular/pie chart SVG library",
    "Progress fill animation JavaScript"
  ]
}