{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "blockName": "tpgb/tp-progress-bar",
  "title": "Progress Bar - Core Attributes",
  "description": "Core content and structure attributes",
  "attributes": {
    "block_id": {
      "type": "string",
      "required": true,
      "description": "Unique 4-character hex identifier for the block"
    },
    "layoutType": {
      "type": "string",
      "default": "progressbar",
      "enum": [
        "progressbar",
        "piechart"
      ],
      "description": "Layout type: horizontal bar or circular pie chart"
    },
    "styleType": {
      "type": "string",
      "default": "style-1",
      "enum": [
        "style-1",
        "style-2",
        "style-3"
      ],
      "description": "Progress bar style (applies to progressbar layout)"
    },
    "pieStyleType": {
      "type": "string",
      "default": "pieStyle-1",
      "enum": [
        "pieStyle-1",
        "pieStyle-2"
      ],
      "description": "Pie chart visual style"
    },
    "circleStyle": {
      "type": "string",
      "default": "style-1",
      "enum": [
        "style-1",
        "style-2"
      ],
      "description": "Circle progress style variant"
    },
    "dynamicValue": {
      "type": "string",
      "default": "69",
      "description": "Progress percentage value (0-100)"
    },
    "dynamicPieValue": {
      "type": "string",
      "default": "0.7",
      "description": "Pie chart value (0.0-1.0 for 0%-100%)"
    },
    "dispNumber": {
      "type": "boolean",
      "default": true,
      "description": "Display percentage number"
    },
    "pieThickness": {
      "type": "string",
      "default": "5",
      "description": "Pie/circle chart line thickness"
    },
    "fillReverse": {
      "type": "boolean",
      "default": false,
      "description": "Reverse gradient fill direction"
    },
    "Title": {
      "type": "string",
      "default": "Web Design",
      "description": "Progress bar title text"
    },
    "subTitle": {
      "type": "string",
      "default": "HTML, CSS and WordPress",
      "description": "Progress bar subtitle/description text"
    },
    "prepostSymbol": {
      "type": "string",
      "default": "%",
      "description": "Symbol displayed with percentage (%, pts, etc.)"
    },
    "iconType": {
      "type": "string",
      "default": "iconIcon",
      "enum": [
        "iconIcon",
        "iconImage"
      ],
      "description": "Icon type: Font Awesome icon or image"
    },
    "iconLibrary": {
      "type": "string",
      "default": "fontawesome",
      "description": "Icon library (currently Font Awesome)"
    },
    "IconName": {
      "type": "string",
      "default": "fas fa-code",
      "description": "Font Awesome icon class"
    },
    "imageName": {
      "type": "object",
      "default": {
        "url": "",
        "Id": ""
      },
      "description": "Image icon upload"
    },
    "titleTypo": {
      "$ref": "definitions://typography"
    },
    "titleColor": {
      "type": "string",
      "default": "",
      "description": "Title text color"
    },
    "titleSpace": {
      "$ref": "definitions://responsive-unit"
    },
    "subTitleTypo": {
      "$ref": "definitions://typography"
    },
    "subTitleColor": {
      "type": "string",
      "default": "",
      "description": "Subtitle text color"
    },
    "showBlockContent": {
      "type": "boolean",
      "default": true,
      "description": "Show/hide block content"
    }
  },
  "required": [
    "block_id"
  ],
  "editingGuidelines": {
    "safeToModify": [
      "Title",
      "subTitle",
      "dynamicValue",
      "dynamicPieValue",
      "prepostSymbol",
      "IconName",
      "bgColor",
      "emptyColor",
      "titleColor",
      "subTitleColor",
      "numberColor",
      "iconColor",
      "pieColor1",
      "pieColor2",
      "titleTypo",
      "subTitleTypo",
      "numTypo",
      "iconSize"
    ],
    "requiresValidation": [
      "layoutType",
      "styleType",
      "heightType",
      "pieStyleType",
      "iconType",
      "sPosition",
      "imgPosition"
    ],
    "dangerous": [
      "block_id"
    ]
  },
  "usesContext": [],
  "supports": {
    "align": [
      "wide",
      "full"
    ]
  },
  "innerBlocksAllowed": false,
  "parentBlockRequired": false
}