{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "blockName": "tpgb/tp-container-inner",
  "title": "Container Inner - Styling Attributes",
  "description": "Visual styling, typography, effects, and positioning",
  "attributes": {
    "Width": {
      "$ref": "definitions://responsive-unit"
    },
    "minHeight": {
      "$ref": "definitions://responsive-unit"
    },
    "topSpace": {
      "type": "string",
      "default": "",
      "description": "Pro: Top offset for sticky positioning (distance from viewport top)",
      "proFeature": true
    },
    "NormalBg": {
      "$ref": "definitions://background"
    },
    "HoverBg": {
      "$ref": "definitions://background"
    },
    "NormalBorder": {
      "type": "object",
      "default": {
        "openBorder": 0,
        "type": "",
        "color": "",
        "width": {
          "md": {
            "top": "",
            "bottom": "",
            "left": "",
            "right": ""
          },
          "unit": ""
        }
      },
      "description": "Border styling (normal state)"
    },
    "HoverBorder": {
      "type": "object",
      "default": {
        "openBorder": 0,
        "type": "",
        "color": "",
        "width": {
          "md": {
            "top": "",
            "bottom": "",
            "left": "",
            "right": ""
          },
          "unit": ""
        }
      },
      "description": "Border styling (hover state)"
    },
    "NormalBradius": {
      "$ref": "definitions://responsive-unit"
    },
    "HoverBradius": {
      "$ref": "definitions://responsive-unit"
    },
    "NormalBShadow": {
      "$ref": "definitions://shadow"
    },
    "HoverBShadow": {
      "$ref": "definitions://shadow"
    },
    "Margin": {
      "$ref": "definitions://responsive-unit"
    },
    "Padding": {
      "$ref": "definitions://responsive-unit"
    },
    "ZIndex": {
      "type": "string",
      "default": "",
      "description": "CSS z-index stacking order"
    },
    "hideDesktop": {
      "type": "boolean",
      "default": false,
      "description": "Hide section on desktop (1201px+)"
    },
    "flexreverse": {
      "type": "boolean",
      "default": false,
      "description": "Reverse flex direction on desktop"
    },
    "flexRespreverse": {
      "type": "boolean",
      "default": false,
      "description": "Enable responsive flex reverse"
    },
    "flexTabreverse": {
      "type": "boolean",
      "default": false,
      "description": "Reverse flex direction on tablet"
    },
    "flexMobreverse": {
      "type": "boolean",
      "default": false,
      "description": "Reverse flex direction on mobile"
    },
    "flexDirection": {
      "type": "object",
      "default": {
        "md": "",
        "sm": "",
        "xs": ""
      },
      "description": "Flex direction (row, column) for content inside this section",
      "responsive": true
    }
  },
  "editingGuidelines": {
    "safeToModify": [
      "Width",
      "minHeight",
      "Padding",
      "Margin",
      "NormalBg",
      "HoverBg",
      "NormalBorder",
      "HoverBorder",
      "NormalBradius",
      "HoverBradius",
      "NormalBShadow",
      "HoverBShadow",
      "customClasses",
      "hideDesktop",
      "hideTablet",
      "hideMobile",
      "flexDirection"
    ],
    "requiresValidation": [
      "stickycol",
      "topSpace",
      "botSpace",
      "stickyDes",
      "stickyTab",
      "stickyMob",
      "conInnerFilter",
      "flexreverse",
      "flexRespreverse",
      "flexTabreverse",
      "flexMobreverse",
      "ZIndex"
    ]
  },
  "styleDependencies": [
    "Flexbox layout CSS",
    "Section width calculations",
    "Sticky positioning CSS (Pro)",
    "Backdrop filter CSS (Pro)",
    "Responsive breakpoint handling"
  ]
}