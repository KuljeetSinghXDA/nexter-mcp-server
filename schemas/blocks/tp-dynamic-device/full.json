{
  "blockName": "tpgb/tp-dynamic-device",
  "version": "1.0.0",
  "title": "Dynamic Device",
  "category": "content",
  "description": "Create website design mockups in desktop, tablet, or mobile screen modes. Showcase portfolios with scrolling animation on hover, device frames with custom or preset mockups. Features multiple device types (iPhone, iPad, MacBook, iMac), 2 layouts (normal, carousel), custom content (image, iframe, template), popup lightbox, scroll effects, and extensive styling. Perfect for portfolio displays, app showcases, and responsive design presentations.",
  "source": "pro",
  "attributes": {
    "block_id": {
      "type": "string",
      "required": true,
      "description": "Unique 4-character hex identifier for the block"
    },
    "layoutType": {
      "type": "string",
      "default": "normal",
      "enum": ["normal", "carousel"],
      "description": "Display mode: single device or carousel slider"
    },
    "deviceType": {
      "type": "string",
      "default": "mobile",
      "enum": ["mobile", "tablet", "laptop", "desktop", "custom"],
      "description": "Device frame type (when layoutType is 'normal')"
    },
    "mobileDevice": {
      "type": "string",
      "default": "iphone-white-flat",
      "description": "Mobile device mockup variant (when deviceType is 'mobile')"
    },
    "tabletDevice": {
      "type": "string",
      "default": "ipad-vertical-white",
      "description": "Tablet device mockup variant (when deviceType is 'tablet')"
    },
    "laptopDevice": {
      "type": "string",
      "default": "laptop-macbook-black",
      "description": "Laptop device mockup variant (when deviceType is 'laptop')"
    },
    "desktopDevice": {
      "type": "string",
      "default": "desktop-imac-minimal",
      "description": "Desktop device mockup variant (when deviceType is 'desktop')"
    },
    "customMedia": {
      "type": "object",
      "default": {"url": ""},
      "description": "Custom device frame image (when deviceType is 'custom')"
    },
    "contentType": {
      "type": "string",
      "default": "image",
      "enum": ["image", "iframe", "template"],
      "description": "Content source type for device screen"
    },
    "conImage": {
      "type": "object",
      "default": {"url": ""},
      "description": "Screen content image (when contentType is 'image')"
    },
    "conIframe": {
      "type": "object",
      "default": {"url": "", "target": "", "nofollow": ""},
      "description": "Iframe URL for device screen (when contentType is 'iframe')"
    },
    "iframeTitle": {
      "type": "string",
      "default": "",
      "description": "Iframe accessibility title"
    },
    "blockTemp": {
      "type": "string",
      "default": "none",
      "description": "Template ID for device content (when contentType is 'template')"
    },
    "backendVisi": {
      "type": "boolean",
      "default": false,
      "description": "Show template in backend editor"
    },
    "ajaxbase": {
      "type": "string",
      "default": "",
      "description": "AJAX base for dynamic template loading"
    },
    "onClickEfct": {
      "type": "string",
      "default": "nothing",
      "enum": ["nothing", "link", "popup"],
      "description": "Click action: nothing, link, or popup lightbox"
    },
    "onClickLink": {
      "type": "object",
      "default": {"url": "", "target": "", "nofollow": ""},
      "description": "Click action link URL (when onClickEfct is 'link')"
    },
    "showIcon": {
      "type": "boolean",
      "default": false,
      "description": "Show device icon"
    },
    "iconSrc": {
      "type": "object",
      "default": {"url": ""},
      "description": "Device icon image"
    },
    "iconWidth": {
      "type": "object",
      "default": {"md": "", "unit": "px"},
      "description": "Icon max width",
      "responsive": true
    },
    "iconBdrRadius": {
      "type": "object",
      "default": {"md": {"top": "", "bottom": "", "left": "", "right": ""}, "unit": "px"},
      "description": "Icon border radius",
      "responsive": true
    },
    "iconConAni": {
      "type": "boolean",
      "default": false,
      "description": "Enable continuous icon animation"
    },
    "iconConAniStyle": {
      "type": "string",
      "default": "pulse",
      "enum": ["pulse", "floating", "tossing", "rotating"],
      "description": "Continuous animation style for icon"
    },
    "iconConHoverAnimation": {
      "type": "boolean",
      "default": false,
      "description": "Trigger animation on hover only"
    },
    "iconConAniDuration": {
      "type": "string",
      "default": "2",
      "description": "Icon animation duration in seconds"
    },
    "cDeviceType": {
      "type": "string",
      "default": "mobile",
      "enum": ["mobile", "laptop", "desktop"],
      "description": "Carousel device type (when layoutType is 'carousel')"
    },
    "cMobileDevice": {
      "type": "string",
      "default": "iphone-white-flat",
      "description": "Carousel mobile device variant"
    },
    "cLaptopDevice": {
      "type": "string",
      "default": "laptop-macbook-black",
      "description": "Carousel laptop device variant"
    },
    "cDesktopDevice": {
      "type": "string",
      "default": "desktop-imac-minimal",
      "description": "Carousel desktop device variant"
    },
    "cCustomMedia": {
      "type": "object",
      "default": {"url": ""},
      "description": "Custom carousel device frame"
    },
    "cConImg": {
      "type": "array",
      "default": [],
      "description": "Carousel content images array"
    },
    "deviceWidth": {
      "type": "object",
      "default": {"md": "", "unit": "%"},
      "description": "Device container width",
      "responsive": true
    },
    "ddAlignment": {
      "type": "object",
      "default": {"md": ""},
      "enum": ["left", "center", "right"],
      "description": "Device alignment",
      "responsive": true
    },
    "deviceMargin": {
      "type": "object",
      "default": {"md": {"top": "", "bottom": "", "left": "", "right": ""}, "unit": "px"},
      "description": "Device container margin",
      "responsive": true
    },
    "devicePadding": {
      "type": "object",
      "default": {"md": {"top": "", "bottom": "", "left": "", "right": ""}, "unit": "px"},
      "description": "Device container padding",
      "responsive": true
    },
    "rebTopOffset": {
      "type": "object",
      "default": {"md": "", "unit": "px"},
      "description": "Content top offset within device frame",
      "responsive": true
    },
    "rebLeftOffset": {
      "type": "object",
      "default": {"md": "", "unit": "px"},
      "description": "Content left offset within device frame",
      "responsive": true
    },
    "rebHoverScroll": {
      "type": "boolean",
      "default": false,
      "description": "Enable scroll animation on hover"
    },
    "rebTranDur": {
      "type": "string",
      "default": "",
      "description": "Scroll transition duration in seconds"
    },
    "dyDevRebConId": {
      "type": "string",
      "default": "",
      "description": "Dynamic content container ID for hover scroll"
    },
    "imgWidth": {
      "type": "object",
      "default": {"md": "", "unit": "px"},
      "description": "Content image width (custom device)",
      "responsive": true
    },
    "imgHeight": {
      "type": "object",
      "default": {"md": "", "unit": "px"},
      "description": "Content image height (custom device)",
      "responsive": true
    },
    "imgTopOff": {
      "type": "object",
      "default": {"md": "", "unit": "px"},
      "description": "Image top offset (custom device)",
      "responsive": true
    },
    "imgLeftOff": {
      "type": "object",
      "default": {"md": "", "unit": "px"},
      "description": "Image left offset (custom device)",
      "responsive": true
    },
    "imgZindex": {
      "type": "string",
      "default": "",
      "description": "Image z-index (custom device)"
    },
    "scrollDimage": {
      "type": "boolean",
      "default": false,
      "description": "Enable image scroll effect"
    },
    "scrollTranDur": {
      "type": "string",
      "default": "",
      "description": "Image scroll transition duration in seconds"
    },
    "scrollManual": {
      "type": "boolean",
      "default": false,
      "description": "Enable manual scrollbar"
    },
    "dyDevConId": {
      "type": "string",
      "default": "",
      "description": "Dynamic device content ID"
    },
    "imgBdrRadius": {
      "type": "object",
      "default": {"md": {"top": "", "bottom": "", "left": "", "right": ""}, "unit": "px"},
      "description": "Content image border radius",
      "responsive": true
    },
    "outerBdrRadius": {
      "type": "object",
      "default": {"md": {"top": "", "bottom": "", "left": "", "right": ""}, "unit": "px"},
      "description": "Scroll container border radius",
      "responsive": true
    },
    "scrollBarWidth": {
      "type": "object",
      "default": {"md": "", "unit": "px"},
      "description": "Scrollbar width",
      "responsive": true
    },
    "thumbBG": {
      "type": "object",
      "default": {"openBg": 0, "bgType": "color", "bgDefaultColor": ""},
      "description": "Scrollbar thumb background"
    },
    "thumbRadius": {
      "type": "object",
      "default": {"md": {"top": "", "right": "", "bottom": "", "left": ""}, "unit": "px"},
      "description": "Scrollbar thumb border radius",
      "responsive": true
    },
    "thumbShadow": {
      "type": "object",
      "default": {"openShadow": 0, "inset": 0, "horizontal": 0, "vertical": 4, "blur": 8, "spread": 0, "color": "rgba(0,0,0,0.40)"},
      "description": "Scrollbar thumb box shadow"
    },
    "trackBG": {
      "type": "object",
      "default": {"openBg": 0, "bgType": "color", "bgDefaultColor": ""},
      "description": "Scrollbar track background"
    },
    "trackRadius": {
      "type": "object",
      "default": {"md": {"top": "", "right": "", "bottom": "", "left": ""}, "unit": "px"},
      "description": "Scrollbar track border radius",
      "responsive": true
    },
    "trackShadow": {
      "type": "object",
      "default": {"openShadow": 0, "inset": 0, "horizontal": 0, "vertical": 4, "blur": 8, "spread": 0, "color": "rgba(0,0,0,0.40)"},
      "description": "Scrollbar track box shadow"
    },
    "FancyOption": {
      "type": "string",
