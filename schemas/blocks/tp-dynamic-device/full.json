      "description": "Popup transition effect"
    },
    "TranDuration": {
      "type": "string",
      "default": "366",
      "description": "Popup transition duration in milliseconds"
    },
    "ThumbsOption": {
      "type": "boolean",
      "default": false,
      "description": "Show popup thumbnails"
    },
    "ThumbsBrCr": {
      "type": "object",
      "default": {"openBorder": 0},
      "description": "Popup thumbnail border"
    },
    "ThumbsBg": {
      "type": "object",
      "default": {"openBg": 0},
      "description": "Popup thumbnail background"
    },
    "shapeNshadow": {
      "type": "object",
      "default": {"openShadow": 0, "typeShadow": "drop-shadow", "horizontal": 2, "vertical": 3, "blur": 2, "color": "rgba(0,0,0,0.5)"},
