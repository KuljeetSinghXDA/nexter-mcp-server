{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "blockName": "tpgb/tp-team-listing",
  "title": "Team Member - Core Attributes",
  "description": "Core content and structure attributes",
  "attributes": {
    "block_id": {
      "type": "string",
      "required": true,
      "description": "Unique 4-character hex identifier for the block"
    },
    "Style": {
      "type": "string",
      "default": "style-1",
      "description": "Visual style variant for team member cards"
    },
    "layout": {
      "type": "string",
      "default": "grid",
      "enum": [
        "grid",
        "carousel"
      ],
      "description": "Display layout: static grid or carousel slider"
    },
    "TeamMemberR": {
      "type": "array",
      "default": [],
      "description": "Array of team member items",
      "repeaterField": {
        "TName": {
          "type": "string",
          "default": "Team Member",
          "description": "Team member name"
        },
        "TImage": {
          "type": "object",
          "default": {
            "url": "",
            "Id": ""
          },
          "description": "Team member photo/avatar"
        },
        "TDesig": {
          "type": "string",
          "default": "Manager",
          "description": "Job title or designation"
        },
        "TCateg": {
          "type": "string",
          "default": "",
          "description": "Team member category/department"
        },
        "CusUrl": {
          "type": "object",
          "default": {
            "url": "",
            "target": "",
            "nofollow": ""
          },
          "description": "Custom URL link"
        },
        "WsUrl": {
          "type": "object",
          "default": {
            "url": "",
            "target": "",
            "nofollow": ""
          },
          "description": "Website URL"
        },
        "FbUrl": {
          "type": "object",
          "default": {
            "url": "",
            "target": "",
            "nofollow": ""
          },
          "description": "Facebook profile URL"
        },
        "MailUrl": {
          "type": "object",
          "default": {
            "url": "",
            "target": "",
            "nofollow": ""
          },
          "description": "Email address (mailto link)"
        }
      }
    }
  },
  "required": [
    "block_id"
  ],
  "editingGuidelines": {
    "safeToModify": [
      "TeamMemberR",
      "Alignment"
    ],
    "requiresValidation": [
      "Style",
      "layout"
    ],
    "dangerous": [
      "block_id"
    ]
  },
  "usesContext": [],
  "supports": {
    "align": [
      "wide",
      "full"
    ]
  },
  "innerBlocksAllowed": false,
  "parentBlockRequired": false
}