      "TeamMemberR",
      "Alignment"
    ],
    "requiresValidation": [
      "Style",
      "layout"
    ]
  },
  "styleDependencies": [
    "Team member card style CSS",
    "Grid or carousel layout CSS",
    "Social icon styling",
    "Hover effect animations",
    "Responsive styling"
  ]
}