  "commonPatterns": {
    "contactForm": {
      "description": "Standard contact form (name, email, message, submit)",
      "requiredAttributes": ["layoutType", "actionOption", "emailTo1"],
      "recommendedChildBlocks": ["nxt-name-field", "nxt-email-field", "nxt-message-field", "nxt-submit-button"]
    },
    "newsletterSignup": {
      "description": "Inline email + submit button for newsletter",
      "requiredAttributes": ["layoutType: nxt-newsstyle-1", "actionOption", "emailTo1"],
      "recommendedChildBlocks": ["nxt-email-field", "nxt-submit-button"],
      "recommendedSettings": {
        "columnGap": "0px (for connected look)"
      }
    },
    "surveyForm": {
      "description": "Form with checkboxes, radios, and custom validation",
      "requiredAttributes": ["layoutType", "actionOption", "chkRadSz", "chkRadBg"],
      "recommendedChildBlocks": ["nxt-checkbox-field", "nxt-radio-field", "nxt-submit-button"]
    }
  },
  "validationRules": {
    "block_id": "Required, unique identifier",
    "layoutType": "Required, determines form layout (nxt-style-1, nxt-style-2, nxt-newsstyle-1, etc.)",
    "actionOption": "Required, array of form actions (Email, Mailchimp, ConvertKit, etc.)",
    "emailTo1": "Required when actionOption includes Email",
    "subject1": "Optional, default 'New Form Submission'",
    "emailTo2": "Optional, for dual recipient (admin + user notifications)",
    "mailchmpApiki": "Required when actionOption includes Mailchimp",
    "mailchmpAud": "Required when actionOption includes Mailchimp",
    "rowGap": "Optional, space between form rows (default varies by layout)",
    "columnGap": "Optional, space between form columns (for multi-column layouts)"
  },
  "warnings": [
    "tp-form-block is a PARENT container - it styles ALL child form field blocks",
    "Always add child blocks (nxt-name-field, nxt-email-field, etc.) inside tp-form-block",
    "layoutType affects form display (style-1 = vertical, newsstyle-1 = horizontal inline)",
    "actionOption determines where form data goes (Email, Mailchimp, Webhook, etc.)",
    "emailTo1 and emailTo2 serve different purposes (admin notification vs user confirmation)",
    "Mailchimp/ConvertKit integration requires API keys stored in settings",
    "Use [nxt_name], [nxt_email] placeholders in email templates to insert form field values",
    "Setting columnGap to 0 creates 'connected' button look (no gap between input and button)",
