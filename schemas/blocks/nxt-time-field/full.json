{
  "blockName": "tpgb/tp-form-time-field",
  "version": "1.0.0",
  "title": "Pick a Time",
  "category": "form",
  "description": "Include a clock-based time picker in your form for time selection. Features field width control, required field validation, placeholder text, help text (description), and custom error messages. Perfect for appointment scheduling, event time selection, booking forms, or any time input needs. Provides a user-friendly time picker interface. Must be used inside a Form Block. Pro version with advanced form controls.",
  "source": "pro",
  "attributes": {
    "block_id": {
      "type": "string",
      "required": true,
      "description": "Unique 4-character hex identifier for the block"
    },
    "labelss": {
      "type": "string",
      "default": "Time",
      "description": "Field label text"
    },
    "reqTgl": {
      "type": "boolean",
      "default": false,
      "description": "Make field required"
    },
    "placeholder": {
      "type": "string",
      "default": "Time",
      "description": "Placeholder text shown in empty input"
    },
    "inpSz": {
      "type": "object",
      "default": {"md": "100", "unit": "%"},
      "description": "Field width (percentage or px)",
      "responsive": true
    },
    "hlpTxt": {
      "type": "boolean",
      "default": false,
      "description": "Enable help text (description)"
    },
    "desctxt": {
      "type": "string",
      "default": "Description",
      "description": "Help text content (when hlpTxt is true)"
    },
    "descPoss": {
      "type": "string",
      "default": "top",
      "enum": ["top", "bottom"],
      "description": "Help text position relative to field"
    },
    "error": {
      "type": "string",
      "default": "This field is required.",
      "description": "Error message for validation failure"
    },
    "uniqueid": {
      "type": "string",
      "default": "",
      "description": "Unique field identifier for form submission"
    }
  },
  "editingGuidelines": {
    "safeToModify": [
      "labelss",
      "placeholder",
      "inpSz",
      "desctxt",
      "error"
    ],
    "requiresValidation": [
      "reqTgl",
      "hlpTxt",
      "descPoss"
    ],
    "dangerous": [
      "block_id",
      "uniqueid"
    ]
  },
  "styleDependencies": [
    "Form Block parent styles",
    "Time picker JavaScript library",
    "Clock UI component"
  ],
  "commonUseCases": [
    "Appointment scheduling",
    "Event time selection",
    "Booking forms",
    "Meeting time picker",
    "Availability selection",
    "Time slot booking",
    "Reminder time",
    "Delivery time window"
  ],
  "relatedBlocks": [
    "tpgb/tp-form-block",
    "tpgb/tp-form-date-field",
    "tpgb/tp-form-submit-button"
  ],
  "capabilities": [
    "Customizable label text",
    "Clock-based time picker",
    "Custom placeholder text",
    "Required field validation",
    "Custom error messages",
    "Responsive width control",
    "Help text with top/bottom positioning",
    "Unique field ID for form handling",
    "Inline display support with submit button",
    "User-friendly time selection interface"
  ],
  "usesContext": [],
  "supports": {
    "anchor": true,
    "align": ["wide", "full"]
  },
  "innerBlocksAllowed": false,
  "parentBlockRequired": true,
  "ancestorBlock": "tpgb/tp-form-block",
  "examples": [
    {
      "description": "Simple time picker",
      "attributes": {
        "block_id": "a1b2",
        "labelss": "Select Time",
        "placeholder": "Pick a time",
        "reqTgl": true
      }
    },
    {
      "description": "Appointment time with help text",
      "attributes": {
        "block_id": "c3d4",
        "labelss": "Preferred Appointment Time",
        "placeholder": "HH:MM",
        "reqTgl": true,
        "hlpTxt": true,
        "desctxt": "Select your preferred time slot for the appointment",
        "descPoss": "bottom"
      }
    },
    {
      "description": "Event start time",
      "attributes": {
        "block_id": "e5f6",
        "labelss": "Event Start Time",
        "placeholder": "Start time",
        "reqTgl": true,
        "hlpTxt": true,
        "desctxt": "What time will the event begin?",
        "descPoss": "top"
      }
    }
  ]
}
