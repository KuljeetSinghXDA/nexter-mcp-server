{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "blockName": "tpgb/tp-tab-item",
  "title": "Tab Tours Inner - Core Attributes",
  "description": "Core content and structure attributes",
  "attributes": {
    "block_id": {
      "type": "string",
      "required": true,
      "description": "Unique 4-character hex identifier for the block"
    },
    "className": {
      "type": "string",
      "default": "",
      "description": "Additional CSS class names"
    },
    "tabtoIndex": {
      "type": "number",
      "default": "",
      "description": "Tab index position within parent"
    },
    "tabinTitle": {
      "type": "string",
      "default": "",
      "description": "Tab title/label displayed on tab button"
    },
    "uniqueKey": {
      "type": "string",
      "default": "",
      "description": "Unique key for this tab within parent"
    },
    "active": {
      "type": "string",
      "default": "",
      "description": "Active state indicator"
    },
    "activeTab": {
      "type": "number",
      "default": 1,
      "description": "Active tab number (inherited from parent)"
    },
    "innerIcon": {
      "type": "boolean",
      "default": false,
      "description": "Show icon for this tab"
    },
    "innericonName": {
      "type": "string",
      "default": "fas fa-home",
      "description": "Font Awesome icon class for this tab"
    },
    "iconImage": {
      "type": "object",
      "default": {
        "url": ""
      },
      "description": "Custom icon image for this tab"
    }
  },
  "required": [
    "block_id"
  ],
  "editingGuidelines": {
    "safeToModify": [
      "tabinTitle",
      "innerIcon",
      "innericonName",
      "iconImage",
      "innerBlocks content"
    ],
    "requiresValidation": [
      "tabtoIndex",
      "uniqueKey",
      "active"
    ],
    "dangerous": [
      "block_id",
      "className",
      "activeTab",
      "navAlign (inherited from parent)"
    ]
  },
  "usesContext": [],
  "supports": {
    "inserter": false,
    "reusable": false,
    "html": false,
    "align": [
      "wide",
      "full"
    ]
  },
  "innerBlocksAllowed": true,
  "parentBlockRequired": true
}