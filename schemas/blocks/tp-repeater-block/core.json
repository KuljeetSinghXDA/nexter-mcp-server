{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "blockName": "tpgb/tp-repeater-block",
  "title": "Repeater - Core Attributes",
  "description": "Core content and structure attributes",
  "attributes": {
    "block_id": {
      "type": "string",
      "required": true,
      "description": "Unique 4-character hex identifier for the block"
    },
    "sourceOpt": {
      "type": "string",
      "default": "none",
      "enum": [
        "none",
        "acf",
        "custom"
      ],
      "description": "Data source: none (manual), ACF repeater field, or custom"
    },
    "repField": {
      "type": "string",
      "default": "",
      "description": "ACF repeater field name (when sourceOpt is 'acf')"
    },
    "gridColumns": {
      "type": "object",
      "default": {
        "md": "2"
      },
      "description": "Number of grid columns",
      "responsive": true
    },
    "contPad": {
      "$ref": "definitions://responsive-unit"
    },
    "columnsGap": {
      "$ref": "definitions://responsive-unit"
    },
    "selectedLayout": {
      "type": "string",
      "default": "",
      "description": "Selected layout template ID"
    }
  },
  "required": [
    "block_id"
  ],
  "editingGuidelines": {
    "safeToModify": [
      "gridColumns",
      "contPad",
      "columnsGap",
      "rowGap",
      "repField",
      "postOpt"
    ],
    "requiresValidation": [
      "sourceOpt",
      "selectedLayout"
    ],
    "dangerous": [
      "block_id"
    ]
  },
  "usesContext": [],
  "supports": {},
  "innerBlocksAllowed": true,
  "parentBlockRequired": false
}