{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "blockName": "tpgb/tp-testimonials",
  "title": "Testimonials - Core Attributes",
  "description": "Core content and structure attributes",
  "attributes": {
    "block_id": {
      "type": "string",
      "required": true,
      "description": "Unique 4-character hex identifier for the block"
    },
    "style": {
      "type": "string",
      "default": "style-1",
      "description": "Testimonial visual style variant"
    },
    "telayout": {
      "type": "string",
      "default": "carousel",
      "enum": [
        "carousel",
        "grid"
      ],
      "description": "Layout type: carousel slider or grid"
    },
    "columns": {
      "type": "object",
      "default": {
        "md": 6,
        "sm": 6,
        "xs": 12
      },
      "description": "Grid column width (when telayout is 'grid')",
      "responsive": true
    },
    "columnSpace": {
      "$ref": "definitions://responsive-unit"
    },
    "styleLayout": {
      "type": "string",
      "default": "style-1",
      "description": "Style layout variant"
    },
    "carouselId": {
      "type": "string",
      "default": "",
      "description": "Unique carousel ID for remote control"
    },
    "rating": {
      "type": "boolean",
      "default": false,
      "description": "Show star ratings"
    },
    "ItemRepeater": {
      "type": "array",
      "repeaterField": true,
      "description": "Testimonial items",
      "items": {
        "testiTitle": {
          "type": "string",
          "default": "John Doe",
          "description": "Author name"
        },
        "designation": {
          "type": "string",
          "default": "MD at Orange",
          "description": "Author job title/designation"
        },
        "content": {
          "type": "string",
          "default": "I am pretty satisfied with Nexter Blocks. Nexter Blocks has completely surpassed our expectations. I was amazed at the quality of Nexter Blocks.",
          "description": "Testimonial content/quote"
        },
        "authorTitle": {
          "type": "string",
          "default": "Supercharge ⚡ Gutenberg",
          "description": "Additional author title/tagline"
        },
        "avatar": {
          "type": "object",
          "default": {
            "url": ""
          },
          "description": "Author avatar image"
        },
        "starRating": {
          "type": "string",
          "default": "3",
          "description": "Star rating value (0-5)"
        }
      },
      "default": [
        {
          "_key": "cvi9",
          "testiTitle": "John Doe",
          "designation": "MD at Orange",
          "content": "I am pretty satisfied with Nexter Blocks. Nexter Blocks has completely surpassed our expectations. I was amazed at the quality of Nexter Blocks.",
          "authorTitle": "Supercharge ⚡ Gutenberg",
          "avatar": {
            "url": ""
          },
          "starRating": ""
        }
      ]
    },
    "contentHei": {
      "$ref": "definitions://responsive-unit"
    },
    "titleHei": {
      "$ref": "definitions://responsive-unit"
    },
    "cntscrollOn": {
      "type": "string",
      "default": "on-hover",
      "enum": [
        "always",
        "on-hover"
      ],
      "description": "Content scrollbar visibility"
    },
    "descByLimit": {
      "type": "string",
      "default": "default",
      "enum": [
        "default",
        "limit"
      ],
      "description": "Content display: full or character limit"
    },
    "descLimit": {
      "type": "string",
      "default": "30",
      "description": "Content character limit (when descByLimit is 'limit')"
    },
    "redmorTxt": {
      "type": "string",
      "default": "Read More",
      "description": "Read more button text"
    },
    "redlesTxt": {
      "type": "string",
      "default": "Read Less",
      "description": "Read less button text"
    },
    "titleByLimit": {
      "type": "string",
      "default": "default",
      "enum": [
        "default",
        "limit"
      ],
      "description": "Title display: full or character limit"
    },
    "titleLimit": {
      "type": "string",
      "default": "30",
      "description": "Title character limit (when titleByLimit is 'limit')"
    },
    "starIcon": {
      "type": "string",
      "default": "default",
      "enum": [
        "default",
        "custom"
      ],
      "description": "Star icon type"
    },
    "sIcon": {
      "type": "string",
      "default": "",
      "description": "Custom star icon class"
    },
    "titleTypo": {
      "$ref": "definitions://typography"
    },
    "titleNormalColor": {
      "type": "string",
      "default": "",
      "description": "Post title color (normal)"
    },
    "titleHoverColor": {
      "type": "string",
      "default": "",
      "description": "Post title color (hover)"
    },
    "AuthortitleTypo": {
      "$ref": "definitions://typography"
    },
    "AuthortitleNormalColor": {
      "type": "string",
      "default": "",
      "description": "Author title color (normal)"
    },
    "AuthortitleHoverColor": {
      "type": "string",
      "default": "",
      "description": "Author title color (hover)"
    },
    "contentTypo": {
      "$ref": "definitions://typography"
    },
    "contentNormalColor": {
      "type": "string",
      "default": "",
      "description": "Content text color (normal)"
    },
    "betSpc": {
      "$ref": "definitions://responsive-unit"
    },
    "stoutLine": {
      "type": "boolean",
      "default": false,
      "description": "Star outline style (stroke instead of fill)"
    },
    "showBlockContent": {
      "type": "boolean",
      "default": true,
      "description": "Show/hide block content"
    }
  },
  "required": [
    "block_id"
  ],
  "editingGuidelines": {
    "safeToModify": [
      "ItemRepeater",
      "columns",
      "columnSpace",
      "contentHei",
      "titleHei",
      "descLimit",
      "titleLimit",
      "redmorTxt",
      "redlesTxt",
      "titleTypo",
      "titleNormalColor",
      "titleHoverColor",
      "AuthortitleTypo",
      "DesTypo",
      "contentTypo",
      "contentNormalColor",
      "starSize",
      "TopSpace",
      "bottomSpc",
      "betSpc",
      "stnrmColor",
      "stactColor",
      "avatarSize",
      "itemPadding",
      "itemMargin",
      "cntntMargin"
    ],
    "requiresValidation": [
      "style",
      "telayout",
      "styleLayout",
      "style4Alignment",
      "carouselId",
      "rating",
      "cntscrollOn",
      "descByLimit",
      "caroByheight",
      "titleByLimit",
      "starIcon",
      "stoutLine"
    ],
    "dangerous": [
      "block_id"
    ]
  },
  "usesContext": [],
  "supports": {
    "align": [
      "wide",
      "full"
    ]
  },
  "innerBlocksAllowed": false,
  "parentBlockRequired": false
}