{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "blockName": "tpgb/tp-smooth-scroll",
  "title": "Smooth Scroll - Styling Attributes",
  "description": "Visual styling, typography, effects, and positioning",
  "attributes": {
    "stepSize": {
      "type": "string",
      "default": "500",
      "description": "Scroll step size in pixels"
    }
  },
  "editingGuidelines": {
    "safeToModify": [
      "aniTime",
      "stepSize",
      "tMult",
      "custEase",
      "viewport"
    ],
    "requiresValidation": [
      "normalizeWheel",
      "easing",
      "infinite",
      "smNav"
    ]
  },
  "styleDependencies": [
    "Smooth scroll JavaScript library",
    "Wheel event normalization",
    "Easing function implementation",
    "Navigation link integration"
  ]
}