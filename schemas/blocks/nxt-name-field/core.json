{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "blockName": "tpgb/tp-form-name-field",
  "title": "Name Field - Core Attributes",
  "description": "Core content and structure attributes",
  "attributes": {
    "block_id": {
      "type": "string",
      "required": true,
      "description": "Unique 4-character hex identifier for the block"
    },
    "labelss": {
      "type": "string",
      "default": "Name",
      "description": "Field label text"
    },
    "nameIconType": {
      "type": "string",
      "default": "none",
      "enum": [
        "none",
        "fontAwesome",
        "image"
      ],
      "description": "Icon type for name field"
    },
    "nameIcons": {
      "type": "string",
      "default": "",
      "description": "Font Awesome icon class (when nameIconType is 'fontAwesome')"
    },
    "nameImage": {
      "type": "object",
      "default": {
        "url": "",
        "Id": ""
      },
      "description": "Custom icon image (when nameIconType is 'image')"
    },
    "reqTgl": {
      "type": "boolean",
      "default": false,
      "description": "Make field required"
    },
    "placeholder": {
      "type": "string",
      "default": "Name",
      "description": "Placeholder text shown in empty input"
    },
    "error": {
      "type": "string",
      "default": "This field is required.",
      "description": "Error message for validation failure"
    },
    "autoComplete": {
      "type": "string",
      "default": "off",
      "enum": [
        "off",
        "on",
        "name",
        "given-name",
        "family-name"
      ],
      "description": "HTML autocomplete attribute value"
    },
    "inpSz": {
      "$ref": "definitions://responsive-unit"
    },
    "hlpTxt": {
      "type": "boolean",
      "default": false,
      "description": "Enable help text (description)"
    },
    "desctxt": {
      "type": "string",
      "default": "Description",
      "description": "Help text content (when hlpTxt is true)"
    },
    "descPoss": {
      "type": "string",
      "default": "top",
      "enum": [
        "top",
        "bottom"
      ],
      "description": "Help text position relative to field"
    },
    "valName": {
      "type": "boolean",
      "default": false,
      "description": "Enable alphabetic-only validation (letters and spaces only)"
    },
    "maxAlphabets": {
      "type": "string",
      "default": "",
      "description": "Maximum number of characters allowed"
    },
    "icnClr": {
      "type": "string",
      "default": "",
      "description": "Icon color (normal state)"
    },
    "hvrIcnClr": {
      "type": "string",
      "default": "",
      "description": "Icon color (hover state)"
    },
    "uniqueid": {
      "type": "string",
      "default": "",
      "description": "Unique field identifier for form submission"
    }
  },
  "required": [
    "block_id"
  ],
  "editingGuidelines": {
    "safeToModify": [
      "labelss",
      "nameIcons",
      "nameImage",
      "placeholder",
      "error",
      "inpSz",
      "desctxt",
      "maxAlphabets",
      "icnClr",
      "hvrIcnClr"
    ],
    "requiresValidation": [
      "nameIconType",
      "reqTgl",
      "autoComplete",
      "hlpTxt",
      "descPoss",
      "valName"
    ],
    "dangerous": [
      "block_id",
      "uniqueid"
    ]
  },
  "usesContext": [],
  "supports": {
    "anchor": true,
    "align": [
      "wide",
      "full"
    ]
  },
  "innerBlocksAllowed": false,
  "parentBlockRequired": true
}