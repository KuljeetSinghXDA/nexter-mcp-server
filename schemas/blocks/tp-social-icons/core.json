{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "blockName": "tpgb/tp-social-icons",
  "title": "Social Icon - Core Attributes",
  "description": "Core content and structure attributes",
  "attributes": {
    "block_id": {
      "type": "string",
      "required": true,
      "description": "Unique 4-character hex identifier for the block"
    },
    "style": {
      "type": "string",
      "default": "style-1",
      "description": "Visual style variant for social icons (15+ styles)"
    },
    "socialIcon": {
      "type": "array",
      "default": [],
      "description": "Array of social media icon items",
      "repeaterField": {
        "socialNtwk": {
          "type": "string",
          "default": "fab fa-facebook",
          "description": "Social network icon (pre-defined options)"
        },
        "customType": {
          "type": "string",
          "default": "icon",
          "enum": [
            "icon",
            "image"
          ],
          "description": "Custom icon type: Font Awesome or image"
        },
        "customIcons": {
          "type": "string",
          "default": "fab fa-whatsapp",
          "description": "Custom Font Awesome icon class"
        },
        "imgField": {
          "type": "object",
          "default": {
            "url": ""
          },
          "description": "Custom icon image upload"
        },
        "linkUrl": {
          "type": "object",
          "default": {
            "url": "#",
            "target": "",
            "nofollow": ""
          },
          "description": "Social media profile/share URL"
        },
        "title": {
          "type": "string",
          "default": "Network",
          "description": "Icon title/label (for style-12, style-14, style-15)"
        },
        "iconNmlColor": {
          "type": "string",
          "default": "",
          "description": "Icon color (normal state)"
        },
        "iconHvrColor": {
          "type": "string",
          "default": "",
          "description": "Icon color (hover state)"
        },
        "nmlBG": {
          "type": "string",
          "default": "",
          "description": "Background color (normal state)"
        },
        "hvrBG": {
          "type": "string",
          "default": "",
          "description": "Background color (hover state)"
        },
        "nmlBColor": {
          "type": "string",
          "default": "",
          "description": "Border color (normal state)"
        },
        "hvrBColor": {
          "type": "string",
          "default": "",
          "description": "Border color (hover state)"
        },
        "tooltipText": {
          "type": "string",
          "default": "",
          "description": "Tooltip text on hover"
        },
        "tooltipTypo": {
          "type": "object",
          "default": {
            "openTypography": 0
          },
          "description": "Typography for tooltip"
        }
      }
    }
  },
  "required": [
    "block_id"
  ],
  "editingGuidelines": {
    "safeToModify": [
      "socialIcon (add/edit/remove items)",
      "hoverStyle"
    ],
    "requiresValidation": [
      "style"
    ],
    "dangerous": [
      "block_id"
    ]
  },
  "usesContext": [],
  "supports": {
    "align": [
      "wide",
      "full"
    ]
  },
  "innerBlocksAllowed": false,
  "parentBlockRequired": false
}