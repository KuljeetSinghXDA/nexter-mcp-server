{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "blockName": "tpgb/tp-social-icons",
  "title": "Social Icon - Styling Attributes",
  "description": "Visual styling, typography, effects, and positioning",
  "attributes": {
    "hoverStyle": {
      "type": "string",
      "default": "faded",
      "enum": [
        "faded",
        "slide",
        "bounce",
        "rotate"
      ],
      "description": "Hover animation effect"
    }
  },
  "editingGuidelines": {
    "safeToModify": [
      "socialIcon (add/edit/remove items)",
      "hoverStyle"
    ],
    "requiresValidation": [
      "style"
    ]
  },
  "styleDependencies": [
    "Social icon style CSS (15+ variants)",
    "Hover animation effects",
    "Icon font library (Font Awesome)",
    "Tooltip styling"
  ]
}