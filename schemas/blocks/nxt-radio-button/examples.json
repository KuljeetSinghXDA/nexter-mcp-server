      "attributes": {
        "block_id": "e5f6",
        "labelss": "Would you recommend us?",
        "fldOptions": [
          {
            "fldLabel": "Yes",
            "fldValue": "yes"
          },
          {
            "fldLabel": "No",
            "fldValue": "no"
          }
        ],
