{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "blockName": "tpgb/tp-form-radio-button",
  "title": "Radio Button - Styling Attributes",
  "description": "Visual styling, typography, effects, and positioning",
  "attributes": {
    "bRadius": {
      "type": "string",
      "default": "round",
      "enum": [
        "square",
        "round"
      ],
      "description": "Radio button border radius style (default: round)"
    }
  },
  "editingGuidelines": {
    "safeToModify": [
      "labelss",
      "fldOptions",
      "desctxt",
      "error",
      "inpSz"
    ],
    "requiresValidation": [
      "optPos",
      "reqTgl",
      "hlpTxt",
      "descPoss",
      "bRadius"
    ]
  },
  "styleDependencies": [
    "Form Block parent styles",
    "Radio input styling",
    "Flexbox layout for options",
    "Border radius for radio shape"
  ]
}