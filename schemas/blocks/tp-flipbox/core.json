{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "blockName": "tpgb/tp-flipbox",
  "title": "Flip Box - Core Attributes",
  "description": "Core content and structure attributes",
  "attributes": {
    "block_id": {
      "type": "string",
      "required": true,
      "description": "Unique 4-character hex identifier for the block"
    },
    "layoutType": {
      "type": "string",
      "default": "listing",
      "description": "Layout type"
    },
    "flipType": {
      "type": "string",
      "default": "horizontal",
      "enum": [
        "horizontal",
        "vertical"
      ],
      "description": "Flip animation direction: horizontal (left-right) or vertical (top-bottom)"
    },
    "backCarouselBtn": {
      "type": "boolean",
      "default": false,
      "description": "Show CTA button on back side"
    },
    "btnCarouselStyle": {
      "type": "string",
      "default": "style-7",
      "description": "Button style for back side"
    },
    "btnCarouselIconType": {
      "type": "string",
      "default": "none",
      "enum": [
        "none",
        "icon"
      ],
      "description": "Button icon type"
    },
    "btnCarouselIconName": {
      "type": "string",
      "default": "",
      "description": "Button icon class"
    },
    "flipcarousel": {
      "type": "array",
      "default": [],
      "description": "Array of flip box items (when using repeater mode)",
      "repeaterField": {
        "title": {
          "type": "string",
          "default": "Special Feature",
          "description": "Front side title"
        },
        "description": {
          "type": "string",
          "description": "Back side description"
        },
        "btnText": {
          "type": "string",
          "default": "Read more",
          "description": "Button text"
        },
        "btnUrl": {
          "type": "object",
          "description": "Button URL link"
        },
        "iconType": {
          "type": "string",
          "default": "icon",
          "description": "Icon type"
        },
        "iconStore": {
          "type": "string",
          "description": "Icon class"
        },
        "imagestore": {
          "type": "object",
          "description": "Icon image"
        }
      }
    }
  },
  "required": [
    "block_id"
  ],
  "editingGuidelines": {
    "safeToModify": [
      "flipcarousel",
      "boxHeight",
      "backAlign",
      "btnCarouselIconName",
      "innerBlocks content (front and back)"
    ],
    "requiresValidation": [
      "flipType",
      "backCarouselBtn",
      "btnCarouselStyle",
      "btnCarouselIconType"
    ],
    "dangerous": [
      "block_id",
      "layoutType"
    ]
  },
  "usesContext": [],
  "supports": {
    "align": [
      "wide",
      "full"
    ]
  },
  "innerBlocksAllowed": true,
  "parentBlockRequired": false
}