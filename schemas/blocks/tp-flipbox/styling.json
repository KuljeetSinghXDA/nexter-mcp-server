{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "blockName": "tpgb/tp-flipbox",
  "title": "Flip Box - Styling Attributes",
  "description": "Visual styling, typography, effects, and positioning",
  "attributes": {
    "boxHeight": {
      "$ref": "definitions://responsive-unit"
    },
    "backAlign": {
      "type": "string",
      "default": "center",
      "enum": [
        "left",
        "center",
        "right"
      ],
      "description": "Content alignment on back side"
    },
    "btnCarouselIconPosition": {
      "type": "string",
      "default": "after",
      "enum": [
        "before",
        "after"
      ],
      "description": "Button icon position"
    }
  },
  "editingGuidelines": {
    "safeToModify": [
      "flipcarousel",
      "boxHeight",
      "backAlign",
      "btnCarouselIconName",
      "innerBlocks content (front and back)"
    ],
    "requiresValidation": [
      "flipType",
      "backCarouselBtn",
      "btnCarouselStyle",
      "btnCarouselIconType"
    ]
  },
  "styleDependencies": [
    "3D flip animation CSS",
    "Front/back side styling",
    "Button styling (if enabled)",
    "Icon font library",
    "Hover trigger effects"
  ]
}