{
  "blockName": "tpgb/tp-form-email-field",
  "version": "1.0.0",
  "title": "Email Address",
  "category": "form",
  "description": "Add an email input field to your form with automatic email validation. Features optional Font Awesome icons or custom images, field width control, required field validation, placeholder text, help text (description), and autocomplete control. Includes built-in email format validation and custom error messages. Must be used inside a Form Block. Pro version with advanced form controls.",
  "source": "pro",
  "attributes": {
    "block_id": {
      "type": "string",
      "required": true,
      "description": "Unique 4-character hex identifier for the block"
    },
    "labelss": {
      "type": "string",
      "default": "Email",
      "description": "Field label text"
    },
    "iconType": {
      "type": "string",
      "default": "none",
      "enum": ["none", "fontAwesome", "image"],
      "description": "Icon type for email field"
    },
    "icons": {
      "type": "string",
      "default": "",
      "description": "Font Awesome icon class (when iconType is 'fontAwesome')"
    },
    "ButtonImage": {
      "type": "object",
      "default": {"url": "", "Id": ""},
      "description": "Custom icon image (when iconType is 'image')"
    },
    "hlpTxt": {
      "type": "boolean",
      "default": false,
      "description": "Enable help text (description)"
    },
    "desctxt": {
      "type": "string",
      "default": "Description",
      "description": "Help text content (when hlpTxt is true)"
    },
    "reqTgl": {
      "type": "boolean",
      "default": true,
      "description": "Make field required (default: true)"
    },
    "placeholder": {
      "type": "string",
      "default": "Email",
      "description": "Placeholder text shown in empty input"
    },
    "error": {
      "type": "string",
      "default": "This field is required.",
      "description": "Error message for validation failure"
    },
    "autoComplete": {
      "type": "string",
      "default": "off",
      "enum": ["off", "on", "email"],
      "description": "HTML autocomplete attribute value"
    },
    "inpSz": {
      "type": "object",
      "default": {"md": "100", "unit": "%"},
      "description": "Field width (percentage or px)",
      "responsive": true
    },
    "descPoss": {
      "type": "string",
      "default": "top",
      "enum": ["top", "bottom"],
      "description": "Help text position relative to field"
    },
    "icnClr": {
      "type": "string",
      "default": "",
      "description": "Icon color (normal state)"
    },
    "hvrIcnClr": {
      "type": "string",
      "default": "",
      "description": "Icon color (hover state)"
    },
    "uniqueid": {
      "type": "string",
      "default": "",
      "description": "Unique field identifier for form submission"
    }
  },
  "editingGuidelines": {
    "safeToModify": [
      "labelss",
      "icons",
      "ButtonImage",
      "desctxt",
      "placeholder",
      "error",
      "inpSz",
      "icnClr",
      "hvrIcnClr"
    ],
    "requiresValidation": [
      "iconType",
      "hlpTxt",
      "reqTgl",
      "autoComplete",
      "descPoss"
    ],
    "dangerous": [
      "block_id",
      "uniqueid"
    ]
  },
  "styleDependencies": [
    "Form Block parent styles",
    "Input container flexbox layout",
    "Icon positioning (absolute/relative)",
    "Email validation JavaScript"
  ],
  "commonUseCases": [
    "Contact forms",
    "Newsletter signup",
    "Registration forms",
    "Login forms",
    "Subscription forms",
    "Booking confirmation",
    "Support requests",
    "Email capture forms"
  ],
  "relatedBlocks": [
    "tpgb/tp-form-block",
    "tpgb/tp-form-name-field",
    "tpgb/tp-form-submit-button"
  ],
  "capabilities": [
    "Customizable label text",
    "3 icon types (none, Font Awesome, custom image)",
    "Required field validation (default: enabled)",
    "Automatic email format validation",
    "Custom placeholder text",
    "Custom error messages",
    "Autocomplete control (3 options)",
    "Responsive width control",
    "Help text with top/bottom positioning",
    "Icon color with hover state",
    "Unique field ID for form handling",
    "Inline display support with submit button"
  ],
  "usesContext": [],
  "supports": {
    "anchor": true,
    "align": ["wide", "full"]
  },
  "innerBlocksAllowed": false,
  "parentBlockRequired": true,
  "ancestorBlock": "tpgb/tp-form-block",
  "examples": [
    {
      "description": "Simple required email field",
      "attributes": {
        "block_id": "a1b2",
        "labelss": "Email Address",
        "placeholder": "your@email.com",
        "reqTgl": true,
        "autoComplete": "email"
      }
    },
    {
      "description": "Email field with icon",
      "attributes": {
        "block_id": "c3d4",
        "labelss": "Your Email",
        "iconType": "fontAwesome",
        "icons": "fas fa-envelope",
        "placeholder": "Enter your email",
        "reqTgl": true,
        "icnClr": "#667eea",
        "hvrIcnClr": "#764ba2"
      }
    },
    {
      "description": "Newsletter signup with help text",
      "attributes": {
        "block_id": "e5f6",
        "labelss": "Subscribe to Newsletter",
        "placeholder": "email@example.com",
        "hlpTxt": true,
        "desctxt": "We'll never share your email with anyone else",
        "descPoss": "bottom",
        "reqTgl": true
      }
    }
  ]
}
