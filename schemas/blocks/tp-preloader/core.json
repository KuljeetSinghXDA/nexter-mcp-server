{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "blockName": "tpgb/tp-preloader",
  "title": "Preloader - Core Attributes",
  "description": "Core content and structure attributes",
  "attributes": {
    "block_id": {
      "type": "string",
      "required": true,
      "description": "Unique 4-character hex identifier for the block"
    },
    "loaderStyle": {
      "type": "string",
      "default": "style-1",
      "enum": [
        "style-1",
        "style-2",
        "style-3",
        "style-4",
        "style-5",
        "style-6",
        "style-7",
        "style-8",
        "style-9",
        "style-10",
        "style-11",
        "style-12",
        "custom"
      ],
      "description": "Preloader animation style (12 prebuilt + custom)"
    },
    "customImage": {
      "type": "object",
      "default": {
        "url": ""
      },
      "description": "Custom logo/image for preloader (when loaderStyle is 'custom')"
    },
    "loadingText": {
      "type": "string",
      "default": "Loading...",
      "description": "Loading status text"
    },
    "showText": {
      "type": "boolean",
      "default": true,
      "description": "Show loading text"
    },
    "showProgress": {
      "type": "boolean",
      "default": false,
      "description": "Show progress bar or percentage"
    },
    "progressType": {
      "type": "string",
      "default": "bar",
      "enum": [
        "bar",
        "percentage"
      ],
      "description": "Progress indicator type"
    },
    "fadeOutDuration": {
      "type": "string",
      "default": "500",
      "description": "Fade out animation duration in milliseconds"
    },
    "loaderTrigger": {
      "type": "string",
      "default": "page-load",
      "enum": [
        "page-load",
        "button-click",
        "scroll"
      ],
      "description": "When to show preloader"
    },
    "triggerSelector": {
      "type": "string",
      "default": "",
      "description": "CSS selector for button-click trigger"
    },
    "showBlockContent": {
      "type": "boolean",
      "default": true,
      "description": "Show/hide block content"
    }
  },
  "required": [
    "block_id"
  ],
  "editingGuidelines": {
    "safeToModify": [
      "customImage",
      "imageSize",
      "loadingText",
      "minDisplayTime",
      "fadeOutDuration",
      "triggerSelector",
      "backgroundColor",
      "loaderColor",
      "loaderSize",
      "zIndex"
    ],
    "requiresValidation": [
      "loaderStyle",
      "showText",
      "showProgress",
      "progressType",
      "loaderTrigger"
    ],
    "dangerous": [
      "block_id"
    ]
  },
  "usesContext": [],
  "supports": {
    "align": [
      "wide",
      "full"
    ]
  },
  "innerBlocksAllowed": false,
  "parentBlockRequired": false
}