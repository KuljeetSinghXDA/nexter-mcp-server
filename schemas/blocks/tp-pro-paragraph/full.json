{
  "blockName": "tpgb/tp-pro-paragraph",
  "version": "1.0.0",
  "title": "Paragraph",
  "category": "content",
  "description": "Advanced paragraph block with optional heading, WYSIWYG editor content, custom typography, text shadows, and link styling. Perfect for rich text content with enhanced styling options beyond the core WordPress paragraph block.",
  "source": "free",
  "attributes": {
    "block_id": {
      "type": "string",
      "required": true,
      "description": "Unique 4-character hex identifier for the block"
    },
    "Showtitle": {
      "type": "boolean",
      "default": true,
      "description": "Show/hide the heading title"
    },
    "title": {
      "type": "string",
      "default": "Save the Earth for future Generations.",
      "description": "Optional heading title above paragraph"
    },
    "titleTag": {
      "type": "string",
      "default": "h3",
      "enum": ["h1", "h2", "h3", "h4", "h5", "h6", "div", "span", "p"],
      "description": "HTML tag for title"
    },
    "content": {
      "type": "string",
      "default": "",
      "description": "Main paragraph content (supports HTML)"
    },
    "descTag": {
      "type": "string",
      "default": "p",
      "enum": ["div", "p"],
      "description": "HTML wrapper tag for content"
    },
    "alignment": {
      "type": "object",
      "default": {"md": ""},
      "description": "Text alignment (left, center, right, justify)",
      "responsive": true
    },
    "textTypo": {
      "type": "object",
      "default": {
        "openTypography": 0,
        "size": {"md": "", "unit": "px"}
      },
      "description": "Typography settings for paragraph text",
      "responsive": true
    },
    "textColor": {
      "type": "string",
      "default": "",
      "description": "Paragraph text color"
    },
    "linkColor": {
      "type": "string",
      "default": "",
      "description": "Link color within paragraph"
    },
    "linkHoverColor": {
      "type": "string",
      "default": "",
      "description": "Link hover color"
    },
    "textShadow": {
      "type": "object",
      "default": {
        "openShadow": 0,
        "typeShadow": "text-shadow",
        "horizontal": 2,
        "vertical": 3,
        "blur": 2,
        "color": "rgba(0,0,0,0.5)"
      },
      "description": "Text shadow for paragraph"
    },
    "HovertextShadow": {
      "type": "object",
      "default": {
        "openShadow": 0,
        "typeShadow": "text-shadow",
        "horizontal": 2,
        "vertical": 3,
        "blur": 2,
        "color": "rgba(0,0,0,0.5)"
      },
      "description": "Text shadow on hover"
    },
    "titleTypo": {
      "type": "object",
      "default": {
        "openTypography": 0,
        "size": {"md": "", "unit": "px"}
      },
      "description": "Typography settings for optional title",
      "responsive": true
    }
  },
  "editingGuidelines": {
    "safeToModify": [
      "content",
      "title",
      "Showtitle",
      "alignment",
      "textColor",
      "linkColor",
      "linkHoverColor"
    ],
    "requiresValidation": [
      "titleTag",
      "descTag",
      "textTypo",
      "titleTypo"
    ],
    "dangerous": [
      "block_id"
    ]
  },
  "styleDependencies": [
    "Typography CSS",
    "Text shadow effects",
    "Link styling",
    "Responsive text alignment"
  ],
  "commonUseCases": [
    "Article body text",
    "Feature descriptions",
    "About section content",
    "Service descriptions",
    "Product descriptions",
    "Blog post paragraphs",
    "Introduction sections"
  ],
  "relatedBlocks": [
    "tpgb/tp-heading-title",
    "tpgb/tp-button",
    "tpgb/tp-blockquote",
    "tpgb/tp-container"
  ],
  "capabilities": [
    "Optional heading title",
    "Custom HTML tag selection",
    "WYSIWYG content editing",
    "Responsive typography",
    "Text alignment control",
    "Custom text colors",
    "Link color customization",
    "Text shadow effects (normal and hover)",
    "Responsive sizing"
  ],
  "usesContext": [],
  "supports": {
    "align": ["wide", "full"]
  },
  "innerBlocksAllowed": false,
  "parentBlockRequired": false,
  "examples": [
    {
      "description": "Simple paragraph with heading",
      "attributes": {
        "block_id": "a1b2",
        "Showtitle": true,
        "title": "Our Mission",
        "titleTag": "h2",
        "content": "We are committed to providing the best service to our customers.",
        "alignment": {"md": "left"}
      }
    },
    {
      "description": "Centered paragraph without heading",
      "attributes": {
        "block_id": "c3d4",
        "Showtitle": false,
        "content": "This is a centered paragraph of text.",
        "alignment": {"md": "center"},
        "textColor": "#333333"
      }
    },
    {
      "description": "Paragraph with custom link colors",
      "attributes": {
        "block_id": "e5f6",
        "content": "Visit our <a href='/contact'>contact page</a> for more information.",
        "linkColor": "#0066cc",
        "linkHoverColor": "#003d7a"
      }
    }
  ]
}
