          "RContentType": "text",
          "RcType": "image",
          "RUrl": {"url": ""},
          "RcAlign": "text-left",
          "RSAlign": "right",
          "Rdes": "Add your event description with style using all our options. You will love to use and add details over here.",
          "ajaxbase": ""
        }
