{
  "blockName": "tpgb/tp-timeline",
  "version": "1.0.0",
  "title": "Timeline",
  "category": "content",
  "description": "Create visually attractive timelines, roadmaps, or event sequences with icons/images, content cards, and connecting lines. Features 2 layout styles (centered and side-aligned), custom start/end pins, animated progress tracking, and extensive styling. Perfect for company history, product roadmaps, event schedules, project milestones, and story-telling.",
  "source": "pro",
  "attributes": {
    "block_id": {
      "type": "string",
      "required": true,
      "description": "Unique 4-character hex identifier for the block"
    },
    "style": {
      "type": "string",
      "default": "style-1",
      "enum": ["style-1", "style-2"],
      "description": "Timeline layout: style-1 (horizontal line with alternating cards), style-2 (vertical cards)"
    },
    "MLayout": {
      "type": "boolean",
      "default": false,
      "description": "Enable mobile-specific layout adjustments"
    },
    "Alignment": {
      "type": "string",
      "default": "center",
      "enum": ["left", "center", "right"],
      "description": "Timeline alignment (center for alternating, left/right for one-sided)"
    },
    "timeediType": {
      "type": "string",
      "default": "",
      "description": "Timeline edit type (internal use)"
    },
    "RContent": {
      "type": "array",
      "repeaterField": true,
      "description": "Array of timeline event/milestone items",
      "items": {
        "Rnone": {
          "type": "string",
          "default": "icon",
          "enum": ["icon", "image"],
          "description": "Pin icon type"
        },
        "Ricon": {
          "type": "string",
          "default": "fa fa-download",
          "description": "Font Awesome icon class for pin"
        },
        "Rimg": {
          "type": "object",
          "default": {"url": "", "Id": ""},
          "description": "Pin image (when Rnone is 'image')"
        },
        "RimgSize": {
          "type": "string",
          "default": "full",
          "description": "WordPress image size for pin image"
        },
        "RTitle": {
          "type": "string",
          "default": "09-11-2045",
          "description": "Date/time label displayed on timeline pin"
        },
        "contentImg": {
          "type": "object",
          "default": {"url": "", "Id": ""},
          "description": "Content card image"
        },
        "RContentType": {
          "type": "string",
          "default": "text",
          "enum": ["text", "template"],
          "description": "Content type: text (HTML) or template (Pro)"
        },
        "RImgWidth": {
          "type": "object",
          "default": {"md": "", "unit": "px"},
          "description": "Content card image width",
          "responsive": true
        },
        "RImgtoff": {
          "type": "object",
          "default": {"md": "", "unit": "px"},
          "description": "Content card image top margin",
          "responsive": true
        },
        "RPosition": {
          "type": "string",
          "default": "right",
          "enum": ["left", "right"],
          "description": "Card position relative to timeline (alternating)"
        },
        "RcTitle": {
          "type": "string",
          "default": "New Event",
          "description": "Event/milestone title"
        },
        "Rdes": {
          "type": "string",
          "default": "Add your event description with style using all our options. You will love to use and add details over here.",
          "description": "Event description text (HTML allowed)"
        },
        "RcType": {
          "type": "string",
          "default": "image",
          "enum": ["image", "icon", "none"],
          "description": "Content featured media type"
        },
        "Rfimage": {
          "type": "object",
          "default": {"url": "", "Id": ""},
          "description": "Featured image for content card"
        },
        "RfImgSize": {
          "type": "string",
          "default": "full",
          "description": "WordPress image size for featured image"
        },
        "RUrl": {
          "type": "object",
          "default": {"url": "", "target": "", "nofollow": ""},
          "description": "Optional link URL for the timeline item"
        },
        "RButton": {
          "type": "boolean",
          "default": false,
          "description": "Show button/CTA in content card"
        },
        "RBtnText": {
          "type": "string",
          "default": "",
          "description": "Button text label"
        },
        "RcHTML": {
          "type": "string",
          "default": "",
          "description": "Custom HTML content for card"
        },
        "Rtemplet": {
          "type": "string",
          "default": "right",
          "description": "Pro: Template positioning"
        },
        "backVisi": {
          "type": "boolean",
          "default": false,
          "description": "Show in backend editor"
        },
        "ajaxbase": {
          "type": "string",
          "default": "",
          "description": "Ajax base URL for dynamic content"
        },
        "RcAlign": {
          "type": "string",
          "default": "text-right",
          "enum": ["text-left", "text-center", "text-right"],
          "description": "Content text alignment"
        },
        "RSAlign": {
          "type": "string",
          "default": "left",
          "enum": ["left", "center", "right"],
          "description": "Separator alignment"
        },
        "RTopspace": {
          "type": "object",
          "default": {"md": "", "unit": "px"},
          "description": "Individual item top margin",
          "responsive": true
        }
      },
      "default": [
        {
          "_key": "1",
          "Rnone": "icon",
          "Ricon": "fa fa-calendar",
          "RcTitle": "Event 1",
