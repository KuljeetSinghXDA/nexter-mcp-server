{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "blockName": "tpgb/tp-anything-carousel",
  "title": "Carousel Anything - Styling Attributes",
  "description": "Visual styling, typography, effects, and positioning",
  "attributes": {
    "OverflowHid": {
      "type": "boolean",
      "default": false,
      "description": "Hide overflow content outside carousel bounds"
    },
    "tpgbEqualHeight": {
      "type": "boolean",
      "default": false,
      "description": "Synchronize equal height across all slides"
    }
  },
  "editingGuidelines": {
    "safeToModify": [
      "carouselList",
      "carouselId",
      "OverflowHid",
      "rmdOrder",
      "tpgbEqualHeight",
      "equalUnqClass",
      "rewindFade",
      "carType"
    ],
    "requiresValidation": [
      "caroslideType",
      "blockTemp"
    ]
  },
  "styleDependencies": [
    "Carousel/slider JavaScript library (Swiper.js or similar)",
    "Slide transition animations (slide/fade)",
    "Equal height synchronization JavaScript",
    "Remote control integration",
    "Touch/swipe gesture support",
    "Navigation arrows and pagination dots",
    "Autoplay and loop functionality"
  ]
}