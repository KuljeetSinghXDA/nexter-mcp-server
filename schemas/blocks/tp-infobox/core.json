{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "blockName": "tpgb/tp-infobox",
  "title": "Infobox - Core Attributes",
  "description": "Core content and structure attributes",
  "attributes": {
    "block_id": {
      "type": "string",
      "required": true,
      "description": "Unique 4-character hex identifier for the block"
    },
    "layoutType": {
      "type": "string",
      "default": "listing",
      "description": "Layout type"
    },
    "styleType": {
      "type": "string",
      "default": "style-1",
      "description": "Visual style variant for info box"
    },
    "Title": {
      "type": "string",
      "default": "Amazing Feature",
      "description": "Info box title/heading"
    },
    "Description": {
      "type": "string",
      "default": "",
      "description": "Info box description text"
    },
    "iconType": {
      "type": "string",
      "default": "icon",
      "enum": [
        "none",
        "icon",
        "image",
        "svg",
        "text"
      ],
      "description": "Icon/image type: Font Awesome icon, image, SVG, or text"
    },
    "IconName": {
      "type": "string",
      "default": "fab fa-angellist",
      "description": "Font Awesome icon class"
    },
    "textIcon": {
      "type": "string",
      "default": "",
      "description": "Text to display as icon (e.g., '01', 'A')"
    },
    "imageName": {
      "type": "object",
      "default": [],
      "description": "Image upload for icon area"
    },
    "svgIcon": {
      "type": "object",
      "default": [],
      "description": "SVG icon upload"
    },
    "dispPinText": {
      "type": "boolean",
      "default": false,
      "description": "Display pin/badge text (e.g., 'New', 'Popular')"
    },
    "pinText": {
      "type": "string",
      "default": "New",
      "description": "Pin/badge text content"
    },
    "IBoxLink": {
      "$ref": "definitions://link"
    },
    "IBoxLinkTgl": {
      "type": "boolean",
      "default": false,
      "description": "Enable info box linking"
    },
    "carouselBtn": {
      "type": "boolean",
      "default": false,
      "description": "Show carousel/CTA button"
    },
    "carBtnStyle": {
      "type": "string",
      "default": "",
      "description": "Carousel button style"
    }
  },
  "required": [
    "block_id"
  ],
  "editingGuidelines": {
    "safeToModify": [
      "Title",
      "Description",
      "IconName",
      "textIcon",
      "imageName",
      "Alignment",
      "pinText",
      "dispPinText",
      "IBoxLink"
    ],
    "requiresValidation": [
      "styleType",
      "iconType",
      "IBoxLinkTgl",
      "carouselBtn",
      "carBtnStyle"
    ],
    "dangerous": [
      "block_id",
      "layoutType"
    ]
  },
  "usesContext": [
    "postId",
    "postType",
    "queryId",
    "tpgb/dynamicSubFieldData",
    "tpgb/dynamicRowIndex",
    "tpgb/dynamicPost",
    "tpgb/dynamicRepField"
  ],
  "supports": {
    "align": [
      "wide",
      "full"
    ]
  },
  "innerBlocksAllowed": false,
  "parentBlockRequired": false
}