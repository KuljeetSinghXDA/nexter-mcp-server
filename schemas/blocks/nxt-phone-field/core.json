{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "blockName": "tpgb/tp-form-phone-field",
  "title": "Phone Number - Core Attributes",
  "description": "Core content and structure attributes",
  "attributes": {
    "block_id": {
      "type": "string",
      "required": true,
      "description": "Unique 4-character hex identifier for the block"
    },
    "labelss": {
      "type": "string",
      "default": "Phone",
      "description": "Field label text"
    },
    "countryWidth": {
      "$ref": "definitions://responsive-unit"
    },
    "error": {
      "type": "string",
      "default": "This field is required",
      "description": "Error message for validation failure"
    },
    "autoComplete": {
      "type": "string",
      "default": "off",
      "enum": [
        "off",
        "on",
        "tel",
        "tel-national",
        "tel-local"
      ],
      "description": "HTML autocomplete attribute value"
    },
    "patt": {
      "type": "string",
      "default": "^\\\\d{3} \\\\d{3} \\\\d{4}$",
      "description": "Regex pattern for phone number validation (default: XXX XXX XXXX)"
    },
    "reqTgl": {
      "type": "boolean",
      "default": false,
      "description": "Make field required"
    },
    "inpSz": {
      "$ref": "definitions://responsive-unit"
    },
    "descPoss": {
      "type": "string",
      "default": "top",
      "enum": [
        "top",
        "bottom"
      ],
      "description": "Help text position relative to field"
    },
    "hlpTxt": {
      "type": "boolean",
      "default": false,
      "description": "Enable help text (description)"
    },
    "desctxt": {
      "type": "string",
      "default": "Description",
      "description": "Help text content (when hlpTxt is true)"
    },
    "phnIconType": {
      "type": "string",
      "default": "none",
      "enum": [
        "none",
        "fontAwesome",
        "image"
      ],
      "description": "Icon type for phone field"
    },
    "phnIcons": {
      "type": "string",
      "default": "",
      "description": "Font Awesome icon class (when phnIconType is 'fontAwesome')"
    },
    "phnImage": {
      "type": "object",
      "default": {
        "url": "",
        "Id": ""
      },
      "description": "Custom icon image (when phnIconType is 'image')"
    },
    "icnClr": {
      "type": "string",
      "default": "",
      "description": "Icon color (normal state)"
    },
    "hvrIcnClr": {
      "type": "string",
      "default": "",
      "description": "Icon color (hover state)"
    },
    "uniqueid": {
      "type": "string",
      "default": "",
      "description": "Unique field identifier for form submission"
    },
    "defCountry": {
      "type": "string",
      "default": "",
      "description": "Default country code for country dropdown"
    }
  },
  "required": [
    "block_id"
  ],
  "editingGuidelines": {
    "safeToModify": [
      "labelss",
      "countryWidth",
      "error",
      "patt",
      "inpSz",
      "desctxt",
      "phnIcons",
      "phnImage",
      "icnClr",
      "hvrIcnClr",
      "defCountry"
    ],
    "requiresValidation": [
      "autoComplete",
      "reqTgl",
      "descPoss",
      "hlpTxt",
      "phnIconType"
    ],
    "dangerous": [
      "block_id",
      "uniqueid"
    ]
  },
  "usesContext": [],
  "supports": {
    "anchor": true,
    "align": [
      "wide",
      "full"
    ]
  },
  "innerBlocksAllowed": false,
  "parentBlockRequired": true
}