{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "blockName": "tpgb/tp-design-tool",
  "title": "Design Tool - Core Attributes",
  "description": "Core content and structure attributes",
  "attributes": {
    "block_id": {
      "type": "string",
      "required": true,
      "description": "Unique 4-character hex identifier for the block"
    },
    "designToolOpt": {
      "type": "string",
      "default": "grid_stystem",
      "description": "Design tool option type"
    },
    "gridSystemOpt": {
      "type": "string",
      "default": "gs_default",
      "enum": [
        "gs_default",
        "gs_custom"
      ],
      "description": "Grid system: default or custom configuration"
    },
    "gridDirection": {
      "type": "string",
      "default": "ltr",
      "enum": [
        "ltr",
        "rtl"
      ],
      "description": "Grid direction: left-to-right or right-to-left"
    },
    "gridMaxWidth": {
      "$ref": "definitions://responsive-unit"
    },
    "gridColumn": {
      "$ref": "definitions://responsive-unit"
    },
    "gridBGcolor": {
      "type": "string",
      "default": "#8072fc40",
      "description": "Grid column background color (when gridSystemOpt is 'gs_custom')"
    },
    "alleySpace": {
      "$ref": "definitions://responsive-unit"
    },
    "gridOffset": {
      "$ref": "definitions://responsive-unit"
    },
    "gridOnFront": {
      "type": "boolean",
      "default": false,
      "description": "Display grid on frontend (otherwise editor-only)"
    }
  },
  "required": [
    "block_id"
  ],
  "editingGuidelines": {
    "safeToModify": [
      "gridMaxWidth",
      "gridColumn",
      "gridBGcolor",
      "alleySpace",
      "alleyBGcolor",
      "gridOffset"
    ],
    "requiresValidation": [
      "designToolOpt",
      "gridSystemOpt",
      "gridDirection",
      "gridOnFront"
    ],
    "dangerous": [
      "block_id"
    ]
  },
  "usesContext": [],
  "supports": {
    "align": [
      "wide",
      "full"
    ]
  },
  "innerBlocksAllowed": false,
  "parentBlockRequired": false
}