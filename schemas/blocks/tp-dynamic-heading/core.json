{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "blockName": "tpgb/tp-dynamic-heading",
  "title": "Dynamic HTML - Core Attributes",
  "description": "Core content and structure attributes",
  "attributes": {
    "block_id": {
      "type": "string",
      "required": true,
      "description": "Unique 4-character hex identifier for the block"
    },
    "textValue": {
      "type": "string",
      "default": "Add Your HTML Content Here",
      "description": "HTML content to display (can include dynamic field placeholders)"
    }
  },
  "required": [
    "block_id"
  ],
  "editingGuidelines": {
    "safeToModify": [
      "textValue",
      "hAlign",
      "hColor",
      "hvrHColor",
      "hTypo"
    ],
    "requiresValidation": [],
    "dangerous": [
      "block_id"
    ]
  },
  "usesContext": [
    "tpgb/dynamicRepField",
    "tpgb/dynamicPost",
    "tpgb/dynamicSubFieldData",
    "tpgb/dynamicRowIndex"
  ],
  "supports": {
    "align": [
      "wide",
      "full"
    ]
  },
  "innerBlocksAllowed": false,
  "parentBlockRequired": true
}