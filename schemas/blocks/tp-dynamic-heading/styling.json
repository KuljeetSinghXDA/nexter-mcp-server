{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "blockName": "tpgb/tp-dynamic-heading",
  "title": "Dynamic HTML - Styling Attributes",
  "description": "Visual styling, typography, effects, and positioning",
  "attributes": {
    "hAlign": {
      "type": "object",
      "default": {
        "md": "left",
        "sm": "",
        "xs": ""
      },
      "enum": [
        "left",
        "center",
        "right"
      ],
      "description": "Text alignment",
      "responsive": true
    },
    "hColor": {
      "type": "string",
      "default": "",
      "description": "Text color (normal state)"
    },
    "hvrHColor": {
      "type": "string",
      "default": "",
      "description": "Text color (hover state)"
    },
    "hTypo": {
      "$ref": "definitions://typography"
    }
  },
  "editingGuidelines": {
    "safeToModify": [
      "textValue",
      "hAlign",
      "hColor",
      "hvrHColor",
      "hTypo"
    ],
    "requiresValidation": []
  },
  "styleDependencies": [
    "CSS text-align",
    "Typography controls",
    "Hover state transitions"
  ]
}