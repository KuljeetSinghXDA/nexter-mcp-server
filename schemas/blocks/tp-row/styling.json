{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "blockName": "tpgb/tp-row",
  "title": "Row - Styling Attributes",
  "description": "Visual styling, typography, effects, and positioning",
  "attributes": {
    "sectionWidth": {
      "type": "string",
      "default": "boxed",
      "enum": [
        "boxed",
        "full"
      ],
      "description": "Row width mode: boxed (contained) or full (edge-to-edge)"
    },
    "height": {
      "type": "string",
      "default": "",
      "enum": [
        "",
        "min-height"
      ],
      "description": "Height control mode"
    },
    "minHeight": {
      "$ref": "definitions://responsive-unit"
    },
    "columnPosition": {
      "type": "string",
      "default": "center",
      "enum": [
        "flex-start",
        "center",
        "flex-end",
        "space-between",
        "space-around",
        "space-evenly"
      ],
      "description": "Horizontal alignment of columns"
    },
    "verticalPosition": {
      "type": "string",
      "default": "",
      "enum": [
        "",
        "flex-start",
        "center",
        "flex-end",
        "stretch"
      ],
      "description": "Vertical alignment of column content"
    },
    "overflow": {
      "type": "string",
      "default": "",
      "enum": [
        "",
        "hidden",
        "visible",
        "scroll",
        "auto"
      ],
      "description": "CSS overflow property"
    },
    "shapeTop": {
      "type": "string",
      "default": "",
      "description": "Top shape divider SVG name (e.g., wave, curve, arrow)"
    },
    "shapeTColor": {
      "type": "string",
      "default": "",
      "description": "Top shape divider fill color"
    },
    "shapeTWidth": {
      "$ref": "definitions://responsive-unit"
    },
    "shapeTHeight": {
      "$ref": "definitions://responsive-unit"
    },
    "shapeBottom": {
      "type": "string",
      "default": "",
      "description": "Bottom shape divider SVG name"
    },
    "shapeBColor": {
      "type": "string",
      "default": "",
      "description": "Bottom shape divider fill color"
    },
    "shapeBWidth": {
      "$ref": "definitions://responsive-unit"
    },
    "shapeBHeight": {
      "$ref": "definitions://responsive-unit"
    },
    "NormalBg": {
      "$ref": "definitions://background"
    },
    "HoverBg": {
      "$ref": "definitions://background"
    },
    "NormalBorder": {
      "type": "object",
      "default": {
        "openBorder": 0,
        "type": "",
        "color": "",
        "width": {
          "md": {
            "top": "",
            "bottom": "",
            "left": "",
            "right": ""
          },
          "unit": ""
        }
      },
      "description": "Border styling (normal state)"
    },
    "HoverBorder": {
      "type": "object",
      "default": {
        "openBorder": 0,
        "type": "",
        "color": "",
        "width": {
          "md": {
            "top": "",
            "bottom": "",
            "left": "",
            "right": ""
          },
          "unit": ""
        }
      },
      "description": "Border styling (hover state)"
    },
    "NormalBradius": {
      "$ref": "definitions://responsive-unit"
    },
    "HoverBradius": {
      "$ref": "definitions://responsive-unit"
    },
    "NormalBShadow": {
      "$ref": "definitions://shadow"
    },
    "HoverBShadow": {
      "$ref": "definitions://shadow"
    },
    "Margin": {
      "$ref": "definitions://responsive-unit"
    },
    "Padding": {
      "$ref": "definitions://responsive-unit"
    },
    "ZIndex": {
      "type": "string",
      "default": "",
      "description": "CSS z-index stacking order"
    },
    "HideDesktop": {
      "type": "boolean",
      "default": false,
      "description": "Hide row on desktop (1201px+)"
    },
    "deepBgopt": {
      "type": "string",
      "default": "",
      "enum": [
        "",
        "bg_normal_color",
        "bg_gradientcolor",
        "bg_image",
        "bg_video",
        "bg_gallery",
        "bg_animate_gradient",
        "scroll_animate_color"
      ],
      "description": "Pro: Deep background layer type for advanced effects",
      "proFeature": true
    },
    "DeepBgcolor": {
      "type": "string",
      "default": "",
      "description": "Pro: Solid color for deep background layer",
      "proFeature": true
    },
    "DeepGrecolor": {
      "type": "string",
      "default": "",
      "description": "Pro: Gradient color for deep background layer",
      "proFeature": true
    },
    "colorList": {
      "type": "array",
      "default": [
        {
          "_key": "0",
          "aniColor": "#8072fc",
          "aniBgtype": ""
        },
        {
          "_key": "1",
          "aniColor": "#6fc784",
          "aniBgtype": ""
        },
        {
          "_key": "2",
          "aniColor": "#ff5a6e",
          "aniBgtype": ""
        }
      ],
      "description": "Pro: Color list repeater for animated/scrolling backgrounds",
      "repeaterField": {
        "aniColor": {
          "type": "string",
          "default": "",
          "description": "Animation color"
        },
        "aniBgtype": {
          "type": "object",
          "default": {
            "openBg": 0
          },
          "description": "Background type per color"
        },
        "scrollImg": {
          "type": "object",
          "default": {
            "url": ""
          },
          "description": "Scroll image URL"
        }
      },
      "proFeature": true
    },
    "craBgeffect": {
      "type": "string",
      "default": "columns_simple_image",
      "enum": [
        "columns_simple_image",
        "columns_animated_bg",
        "bg_canvas",
        "multi-color"
      ],
      "description": "Pro: Creative background effect type",
      "proFeature": true
    },
    "patiColor": {
      "type": "string",
      "default": "",
      "description": "Pro: Primary particle color",
      "proFeature": true
    },
    "topOption": {
      "type": "string",
      "default": "",
      "enum": [
        "",
        "color",
        "texture-img"
      ],
      "description": "Pro: Top overlay layer option",
      "proFeature": true
    },
    "topBgtype": {
      "$ref": "definitions://background"
    },
    "timgOpacity": {
      "type": "string",
      "default": "",
      "description": "Pro: Texture image opacity (0-1)",
      "proFeature": true
    }
  },
  "editingGuidelines": {
    "safeToModify": [
      "Padding",
      "Margin",
      "minHeight",
      "gutterSpace",
      "columnPosition",
      "verticalPosition",
      "NormalBg",
      "HoverBg",
      "NormalBorder",
      "HoverBorder",
      "NormalBradius",
      "HoverBradius",
      "NormalBShadow",
      "HoverBShadow",
      "shapeTop",
      "shapeTColor",
      "shapeTWidth",
      "shapeTHeight",
      "shapeBottom",
      "shapeBColor",
      "shapeBWidth",
      "shapeBHeight",
      "customClass",
      "customId",
      "HideDesktop",
      "HideTablet",
      "HideMobile"
    ],
    "requiresValidation": [
      "sectionWidth",
      "height",
      "tagName",
      "overflow",
      "deepBgopt",
      "videosour",
      "craBgeffect",
      "imgeffect",
      "midOption"
    ]
  },
  "styleDependencies": [
    "Row flexbox layout CSS",
    "Column alignment and distribution",
    "Shape divider SVG assets",
    "Background layer CSS (normal, deep, middle, top)",
    "Video background player scripts",
    "Parallax scroll libraries",
    "Canvas particles.js library",
    "Ken Burns animation CSS",
    "Tilt.js for 3D effects",
    "Responsive breakpoint handling"
  ]
}