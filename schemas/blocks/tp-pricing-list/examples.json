{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "blockName": "tpgb/tp-pricing-list",
  "title": "Pricing List - Usage Examples",
  "description": "Common usage patterns and example configurations",
  "examples": [
    {
      "description": "Simple menu item with price",
      "attributes": {
        "block_id": "a1b2",
        "style": "style-1",
        "title": "Caesar Salad",
        "price": "$12.99",
        "description": "Fresh romaine lettuce, parmesan cheese, croutons, and our signature dressing",
        "tagField": "Vegetarian|Gluten-Free Option"
      }
    },
    {
      "description": "Menu item with image (style-2)",
      "attributes": {
        "block_id": "c3d4",
        "style": "style-2",
        "title": "Grilled Salmon",
        "price": "$24.99",
        "imageField": {
          "url": "/salmon.jpg"
        },
        "imgShape": "circle",
        "hoverEffect": "horizontal",
        "boxAlign": "center-left"
      }
    },
    {
      "description": "Price list with dotted separator (style-3)",
      "attributes": {
        "block_id": "e5f6",
        "style": "style-3",
        "title": "Haircut & Styling",
        "price": "$45",
        "lineStyle": {
          "openBorder": 1,
          "type": "dotted",
          "color": "#cccccc",
          "width": {
            "md": {
              "bottom": "2"
            },
            "unit": "px"
          }
        },
        "tagField": "30 min"
      }
    },
    {
      "description": "Custom styled menu item",
      "attributes": {
        "block_id": "g7h8",
        "title": "Espresso",
        "price": "$3.50",
        "titleTypo": {
          "openTypography": 1,
          "size": {
            "md": "24",
            "unit": "px"
          }
        },
        "titleColor": "#2c3e50",
        "tagField": "Single|Double",
        "tagSpace": {
          "md": "10",
          "unit": "px"
        }
      }
    }
  ],
  "commonPatterns": {}
}