{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "blockName": "tpgb/tp-form-option-field",
  "title": "Dropdown - Core Attributes",
  "description": "Core content and structure attributes",
  "attributes": {
    "block_id": {
      "type": "string",
      "required": true,
      "description": "Unique 4-character hex identifier for the block"
    },
    "labelss": {
      "type": "string",
      "default": "Select",
      "description": "Field label text"
    },
    "fldOptions": {
      "type": "array",
      "default": [
        {
          "fldLabel": " Enter Label",
          "fldValue": " Enter Value"
        }
      ],
      "repeaterField": true,
      "description": "Array of dropdown options with label and value pairs"
    },
    "reqTgl": {
      "type": "boolean",
      "default": false,
      "description": "Make field required (user must select an option)"
    },
    "inpSz": {
      "$ref": "definitions://responsive-unit"
    },
    "hlpTxt": {
      "type": "boolean",
      "default": false,
      "description": "Enable help text (description)"
    },
    "desctxt": {
      "type": "string",
      "default": "Description",
      "description": "Help text content (when hlpTxt is true)"
    },
    "descPoss": {
      "type": "string",
      "default": "top",
      "enum": [
        "top",
        "bottom"
      ],
      "description": "Help text position relative to field"
    },
    "error": {
      "type": "string",
      "default": "This field is required.",
      "description": "Error message for validation failure"
    },
    "uniqueid": {
      "type": "string",
      "default": "",
      "description": "Unique field identifier for form submission"
    }
  },
  "required": [
    "block_id"
  ],
  "editingGuidelines": {
    "safeToModify": [
      "labelss",
      "fldOptions",
      "inpSz",
      "desctxt",
      "error"
    ],
    "requiresValidation": [
      "reqTgl",
      "hlpTxt",
      "descPoss"
    ],
    "dangerous": [
      "block_id",
      "uniqueid"
    ]
  },
  "usesContext": [],
  "supports": {
    "anchor": true,
    "align": [
      "wide",
      "full"
    ]
  },
  "innerBlocksAllowed": false,
  "parentBlockRequired": true
}