{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "blockName": "tpgb/tp-form-number-field",
  "title": "Numeric Input - Core Attributes",
  "description": "Core content and structure attributes",
  "attributes": {
    "block_id": {
      "type": "string",
      "required": true,
      "description": "Unique 4-character hex identifier for the block"
    },
    "labelss": {
      "type": "string",
      "default": "Number",
      "description": "Field label text"
    },
    "reqTgl": {
      "type": "boolean",
      "default": false,
      "description": "Make field required"
    },
    "valNum": {
      "type": "boolean",
      "default": false,
      "description": "Enable number range validation using minNum/maxNum"
    },
    "placeholder": {
      "type": "string",
      "default": "Number",
      "description": "Placeholder text shown in empty input"
    },
    "error": {
      "type": "string",
      "default": "This field is required.",
      "description": "Error message for validation failure"
    },
    "minNum": {
      "type": "string",
      "default": "",
      "description": "Minimum allowed number (when valNum is true)"
    },
    "maxNum": {
      "type": "string",
      "default": "",
      "description": "Maximum allowed number (when valNum is true)"
    },
    "inpSz": {
      "$ref": "definitions://responsive-unit"
    },
    "hlpTxt": {
      "type": "boolean",
      "default": false,
      "description": "Enable help text (description)"
    },
    "desctxt": {
      "type": "string",
      "default": "Description",
      "description": "Help text content (when hlpTxt is true)"
    },
    "descPoss": {
      "type": "string",
      "default": "top",
      "enum": [
        "top",
        "bottom"
      ],
      "description": "Help text position relative to field"
    },
    "numIconType": {
      "type": "string",
      "default": "none",
      "enum": [
        "none",
        "fontAwesome",
        "image"
      ],
      "description": "Icon type for number field"
    },
    "numIcons": {
      "type": "string",
      "default": "",
      "description": "Font Awesome icon class (when numIconType is 'fontAwesome')"
    },
    "numImage": {
      "type": "object",
      "default": {
        "url": "",
        "Id": ""
      },
      "description": "Custom icon image (when numIconType is 'image')"
    },
    "maxCount": {
      "type": "string",
      "default": "15",
      "description": "Maximum character/digit count allowed"
    },
    "icnClr": {
      "type": "string",
      "default": "",
      "description": "Icon color (normal state)"
    },
    "hvrIcnClr": {
      "type": "string",
      "default": "",
      "description": "Icon color (hover state)"
    },
    "uniqueid": {
      "type": "string",
      "default": "",
      "description": "Unique field identifier for form submission"
    }
  },
  "required": [
    "block_id"
  ],
  "editingGuidelines": {
    "safeToModify": [
      "labelss",
      "placeholder",
      "error",
      "minNum",
      "maxNum",
      "inpSz",
      "desctxt",
      "numIcons",
      "numImage",
      "maxCount",
      "icnClr",
      "hvrIcnClr"
    ],
    "requiresValidation": [
      "reqTgl",
      "valNum",
      "hlpTxt",
      "descPoss",
      "numIconType"
    ],
    "dangerous": [
      "block_id",
      "uniqueid"
    ]
  },
  "usesContext": [],
  "supports": {
    "anchor": true,
    "align": [
      "wide",
      "full"
    ]
  },
  "innerBlocksAllowed": false,
  "parentBlockRequired": true
}