{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "blockName": "tpgb/tp-column",
  "title": "Column - Core Attributes",
  "description": "Core content and structure attributes",
  "attributes": {
    "block_id": {
      "type": "string",
      "required": true,
      "description": "Unique 4-character hex identifier for the block"
    },
    "className": {
      "type": "string",
      "default": "",
      "description": "Additional CSS class names"
    },
    "Width": {
      "$ref": "definitions://responsive-unit"
    },
    "verticalPos": {
      "type": "object",
      "default": {
        "md": "",
        "sm": "",
        "xs": ""
      },
      "description": "Vertical alignment of content (flex align-items) - responsive",
      "responsive": true
    },
    "horizontalPos": {
      "type": "object",
      "default": {
        "md": "",
        "sm": "",
        "xs": ""
      },
      "description": "Horizontal alignment of content (flex justify-content) - responsive",
      "responsive": true
    },
    "blockSpace": {
      "type": "object",
      "default": {
        "md": ""
      },
      "description": "Spacing between blocks inside the column (margin-bottom)",
      "responsive": true
    },
    "stickycol": {
      "type": "boolean",
      "default": false,
      "description": "Pro: Enable sticky column positioning (scrolls with page)",
      "proFeature": true
    },
    "botSpace": {
      "type": "string",
      "default": "",
      "description": "Pro: Bottom offset for sticky column (distance from viewport bottom)",
      "proFeature": true
    },
    "stickyDes": {
      "type": "boolean",
      "default": true,
      "description": "Pro: Enable sticky on desktop",
      "proFeature": true
    },
    "stickyTab": {
      "type": "boolean",
      "default": true,
      "description": "Pro: Enable sticky on tablet",
      "proFeature": true
    },
    "stickyMob": {
      "type": "boolean",
      "default": false,
      "description": "Pro: Enable sticky on mobile",
      "proFeature": true
    },
    "customClasses": {
      "type": "string",
      "default": "",
      "description": "Custom CSS classes"
    },
    "customCss": {
      "type": "string",
      "default": "",
      "description": "Custom CSS rules for this block"
    },
    "hideDesktop": {
      "type": "boolean",
      "default": false,
      "description": "Hide column on desktop (1201px+)"
    },
    "hideTablet": {
      "type": "boolean",
      "default": false,
      "description": "Hide column on tablet (768-1200px)"
    },
    "hideMobile": {
      "type": "boolean",
      "default": false,
      "description": "Hide column on mobile (767px and below)"
    },
    "wrapLink": {
      "type": "boolean",
      "default": false,
      "description": "Pro: Wrap entire column in a clickable link",
      "proFeature": true
    },
    "colUrl": {
      "$ref": "definitions://link"
    }
  },
  "required": [
    "block_id"
  ],
  "editingGuidelines": {
    "safeToModify": [
      "Width",
      "verticalPos",
      "verticalPosition",
      "horizontalPos",
      "horizontalPosition",
      "blockSpace",
      "Padding",
      "Margin",
      "NormalBg",
      "HoverBg",
      "NormalBorder",
      "HoverBorder",
      "NormalBradius",
      "HoverBradius",
      "NormalBShadow",
      "HoverBShadow",
      "colOrder",
      "customClasses",
      "hideDesktop",
      "hideTablet",
      "hideMobile"
    ],
    "requiresValidation": [
      "stickycol",
      "topSpace",
      "botSpace",
      "stickyDes",
      "stickyTab",
      "stickyMob",
      "ZIndex"
    ],
    "dangerous": [
      "block_id",
      "className"
    ]
  },
  "usesContext": [],
  "supports": {
    "html": false,
    "reusable": false,
    "inserter": false
  },
  "innerBlocksAllowed": true,
  "parentBlockRequired": true
}