{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "blockName": "tpgb/tp-column",
  "title": "Column - Usage Examples",
  "description": "Common usage patterns and example configurations",
  "examples": [
    {
      "description": "50% width column with center alignment",
      "attributes": {
        "block_id": "a1b2",
        "Width": {
          "md": 50,
          "sm": 50,
          "xs": 100,
          "unit": "%"
        },
        "verticalPosition": "center",
        "horizontalPosition": "center",
        "Padding": {
          "md": {
            "top": "20",
            "bottom": "20",
            "left": "20",
            "right": "20"
          },
          "unit": "px"
        }
      }
    },
    {
      "description": "33% width column with background",
      "attributes": {
        "block_id": "c3d4",
        "Width": {
          "md": 33.33,
          "sm": 50,
          "xs": 100,
          "unit": "%"
        },
        "NormalBg": {
          "openBg": 1,
          "bgType": "color",
          "bgColor": "#f5f5f5"
        },
        "Padding": {
          "md": {
            "top": "30",
            "bottom": "30",
            "left": "20",
            "right": "20"
          },
          "unit": "px"
        }
      }
    },
    {
      "description": "Pro: Sticky sidebar column (25% width)",
      "attributes": {
        "block_id": "e5f6",
        "Width": {
          "md": 25,
          "sm": 100,
          "xs": 100,
          "unit": "%"
        },
        "stickycol": true,
        "topSpace": "100",
        "stickyDes": true,
        "stickyTab": false,
        "stickyMob": false
      }
    },
    {
      "description": "Reordered column (appears first on mobile)",
      "attributes": {
        "block_id": "g7h8",
        "Width": {
          "md": 50,
          "sm": 50,
          "xs": 100,
          "unit": "%"
        },
        "colOrder": {
          "md": "2",
          "sm": "2",
          "xs": "1"
        }
      }
    }
  ],
  "commonPatterns": {}
}