{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "blockName": "tpgb/tp-scroll-navigation",
  "title": "Scroll Navigation - Core Attributes",
  "description": "Core content and structure attributes",
  "attributes": {
    "block_id": {
      "type": "string",
      "required": true,
      "description": "Unique 4-character hex identifier for the block"
    },
    "scrollNavStyle": {
      "type": "string",
      "default": "style-1",
      "enum": [
        "style-1",
        "style-2"
      ],
      "description": "Visual style: style-1 (dots), style-2 (text labels)"
    },
    "scrollNavRepeater": {
      "type": "array",
      "repeaterField": true,
      "description": "Navigation items linked to page sections",
      "items": {
        "title": {
          "type": "string",
          "default": "Section",
          "description": "Section title/label"
        },
        "sectionId": {
          "type": "string",
          "default": "",
          "description": "CSS ID of target section (without #)"
        },
        "icon": {
          "type": "string",
          "default": "",
          "description": "Font Awesome icon class (style-1)"
        },
        "tooltip": {
          "type": "string",
          "default": "Section",
          "description": "Tooltip text on hover"
        }
      },
      "default": [
        {
          "_key": "0",
          "title": "Home",
          "sectionId": "section-1",
          "icon": "fas fa-home",
          "tooltip": "Home"
        },
        {
          "_key": "1",
          "title": "About",
          "sectionId": "section-2",
          "icon": "fas fa-info-circle",
          "tooltip": "About"
        },
        {
          "_key": "2",
          "title": "Services",
          "sectionId": "section-3",
          "icon": "fas fa-cog",
          "tooltip": "Services"
        },
        {
          "_key": "3",
          "title": "Contact",
          "sectionId": "section-4",
          "icon": "fas fa-envelope",
          "tooltip": "Contact"
        }
      ]
    },
    "scrollDirection": {
      "type": "string",
      "default": "vertical",
      "enum": [
        "vertical",
        "horizontal"
      ],
      "description": "Scroll direction and nav position"
    },
    "scrollSpeed": {
      "type": "string",
      "default": "1000",
      "description": "Smooth scroll animation duration in milliseconds"
    },
    "showTooltip": {
      "type": "boolean",
      "default": true,
      "description": "Show tooltips on hover"
    },
    "progressBar": {
      "type": "boolean",
      "default": false,
      "description": "Show scroll progress indicator"
    },
    "hideOnMobile": {
      "type": "boolean",
      "default": false,
      "description": "Hide navigation on mobile devices"
    },
    "showBlockContent": {
      "type": "boolean",
      "default": true,
      "description": "Show/hide block content"
    }
  },
  "required": [
    "block_id"
  ],
  "editingGuidelines": {
    "safeToModify": [
      "scrollNavRepeater",
      "scrollOffset",
      "scrollSpeed",
      "activeOffset",
      "tooltipPosition"
    ],
    "requiresValidation": [
      "scrollNavStyle",
      "scrollDirection",
      "scrollPosition",
      "showTooltip",
      "progressBar",
      "progressPosition",
      "hideOnMobile"
    ],
    "dangerous": [
      "block_id"
    ]
  },
  "usesContext": [],
  "supports": {
    "align": [
      "wide",
      "full"
    ]
  },
  "innerBlocksAllowed": false,
  "parentBlockRequired": false
}