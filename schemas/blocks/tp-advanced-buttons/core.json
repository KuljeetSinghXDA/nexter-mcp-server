{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "blockName": "tpgb/tp-advanced-buttons",
  "title": "Pro Buttons - Core Attributes",
  "description": "Core content and structure attributes",
  "attributes": {
    "block_id": {
      "type": "string",
      "required": true,
      "description": "Unique 4-character hex identifier for the block"
    },
    "btnType": {
      "type": "string",
      "default": "cta",
      "enum": [
        "cta",
        "download"
      ],
      "description": "Button type: CTA or download"
    },
    "ctaStyle": {
      "type": "string",
      "default": "style-1",
      "description": "CTA button style variant (when btnType is 'cta')"
    },
    "dwnldStyle": {
      "type": "string",
      "default": "style-1",
      "description": "Download button style variant (when btnType is 'download')"
    },
    "btnText": {
      "type": "string",
      "default": "Buy Now",
      "description": "Main button text"
    },
    "dst5LoadingText": {
      "type": "string",
      "default": "downloading...",
      "description": "Loading text for download style-5"
    },
    "dst5SuccessText": {
      "type": "string",
      "default": "done!",
      "description": "Success text for download style-5"
    },
    "extraText": {
      "type": "string",
      "default": "The Plus",
      "description": "Extra overlay text"
    },
    "dst3MWidth": {
      "$ref": "definitions://responsive-unit"
    },
    "extraText1": {
      "type": "string",
      "default": "The Plus",
      "description": "Extra text 1 (for CTA style-6, style-9)"
    },
    "extraText2": {
      "type": "string",
      "default": "The Plus",
      "description": "Extra text 2 (for CTA style-6, style-9, style-13)"
    },
    "nmlEmoji": {
      "type": "string",
      "default": "üíØ",
      "description": "Normal state emoji (CTA style-8)"
    },
    "hvrEmoji": {
      "type": "string",
      "default": "üëè",
      "description": "Hover state emoji (CTA style-8)"
    },
    "btnLink": {
      "$ref": "definitions://link"
    },
    "ariaLabel": {
      "type": "string",
      "default": "",
      "description": "ARIA label for accessibility"
    },
    "btnWidth": {
      "$ref": "definitions://responsive-unit"
    },
    "btnIcon": {
      "type": "boolean",
      "default": false,
      "description": "Show button icon"
    },
    "iconLibrary": {
      "type": "string",
      "default": "font_awesome",
      "description": "Icon library"
    },
    "iconName": {
      "type": "string",
      "default": "fas fa-chevron-right",
      "description": "Font Awesome icon class"
    },
    "iconImage": {
      "type": "object",
      "default": {
        "url": ""
      },
      "description": "Custom icon image"
    },
    "downloadFile": {
      "type": "object",
      "default": {
        "url": ""
      },
      "description": "File to download (when btnType is 'download')"
    },
    "downloadName": {
      "type": "string",
      "default": "",
      "description": "Downloaded file name"
    },
    "showBlockContent": {
      "type": "boolean",
      "default": true,
      "description": "Show/hide block content"
    }
  },
  "required": [
    "block_id"
  ],
  "editingGuidelines": {
    "safeToModify": [
      "btnText",
      "extraText",
      "extraText1",
      "extraText2",
      "nmlEmoji",
      "hvrEmoji",
      "dst5LoadingText",
      "dst5SuccessText",
      "btnLink",
      "ariaLabel",
      "btnTypo",
      "btnPadding",
      "btnMargin",
      "btnWidth",
      "btnColor",
      "btnHvrColor",
      "iconName",
      "iconImage",
      "iconSize",
      "iconSpacing",
      "downloadFile",
      "downloadName",
      "dst3MWidth"
    ],
    "requiresValidation": [
      "btnType",
      "ctaStyle",
      "dwnldStyle",
      "btnAlign",
      "btnIcon",
      "iconLibrary",
      "iconPosition"
    ],
    "dangerous": [
      "block_id"
    ]
  },
  "usesContext": [],
  "supports": {
    "align": [
      "wide",
      "full"
    ]
  },
  "innerBlocksAllowed": false,
  "parentBlockRequired": false
}