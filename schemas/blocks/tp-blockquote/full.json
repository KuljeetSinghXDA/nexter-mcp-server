{
  "blockName": "tpgb/tp-blockquote",
  "version": "1.0.0",
  "title": "Blockquote",
  "category": "content",
  "description": "Stylized quotation block for displaying quotes, testimonials, or cited text. Multiple style variants with custom typography, author attribution, and color options. Perfect for emphasizing important quotes or customer testimonials.",
  "source": "free",
  "attributes": {
    "block_id": {
      "type": "string",
      "required": true,
      "description": "Unique 4-character hex identifier for the block"
    },
    "style": {
      "type": "string",
      "default": "style-1",
      "description": "Visual style variant for blockquote"
    },
    "content": {
      "type": "string",
      "source": "html",
      "selector": ".quote-text",
      "default": "You can't connect the dots looking forward; you can only connect them looking backwards.",
      "description": "Quote text content (HTML supported)"
    },
    "authorName": {
      "type": "string",
      "source": "html",
      "selector": ".tpgb-quote-author",
      "default": "Steve Jobs",
      "description": "Quote author/attribution"
    },
    "contentAlignment": {
      "type": "string",
      "default": "",
      "enum": ["left", "center", "right"],
      "description": "Text alignment for quote and author"
    },
    "typography": {
      "type": "object",
      "default": {
        "openTypography": 0,
        "size": {"md": "", "unit": "px"}
      },
      "description": "Typography settings for quote text",
      "responsive": true
    },
    "authorTypo": {
      "type": "object",
      "default": {
        "openTypography": 0,
        "size": {"md": "", "unit": "px"}
      },
      "description": "Typography settings for author name",
      "responsive": true
    },
    "textNormalColor": {
      "type": "string",
      "default": "#747474",
      "description": "Quote text color (normal state)"
    },
    "textHoverColor": {
      "type": "string",
      "default": "",
      "description": "Quote text color (hover state)"
    },
    "authorNormalColor": {
      "type": "string",
      "default": "",
      "description": "Author name color (normal state)"
    }
  },
  "editingGuidelines": {
    "safeToModify": [
      "content",
      "authorName",
      "contentAlignment",
      "textNormalColor",
      "textHoverColor",
      "authorNormalColor"
    ],
    "requiresValidation": [
      "style",
      "typography",
      "authorTypo"
    ],
    "dangerous": [
      "block_id"
    ]
  },
  "styleDependencies": [
    "Blockquote style CSS (multiple variants)",
    "Quote marks/decoration styling",
    "Typography CSS",
    "Hover effects"
  ],
  "commonUseCases": [
    "Customer testimonial quotes",
    "Famous quotes",
    "Cited text passages",
    "Pull quotes in articles",
    "Review excerpts",
    "Expert opinions"
  ],
  "relatedBlocks": [
    "tpgb/tp-testimonials",
    "tpgb/tp-pro-paragraph",
    "tpgb/tp-heading-title"
  ],
  "capabilities": [
    "Multiple style variants",
    "Author attribution",
    "Custom typography",
    "Text alignment",
    "Custom colors (normal and hover)",
    "HTML content support",
    "Quote decoration styling"
  ],
  "usesContext": [],
  "supports": {
    "align": ["wide", "full"]
  },
  "innerBlocksAllowed": false,
  "parentBlockRequired": false,
  "examples": [
    {
      "description": "Simple centered quote",
      "attributes": {
        "block_id": "a1b2",
        "style": "style-1",
        "content": "The only way to do great work is to love what you do.",
        "authorName": "Steve Jobs",
        "contentAlignment": "center",
        "textNormalColor": "#333333"
      }
    },
    {
      "description": "Left-aligned quote without author",
      "attributes": {
        "block_id": "c3d4",
        "content": "Success is not final, failure is not fatal: it is the courage to continue that counts.",
        "authorName": "",
        "contentAlignment": "left"
      }
    }
  ]
}
