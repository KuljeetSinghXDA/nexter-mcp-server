{
  "blockName": "tpgb/tp-form-date-field",
  "version": "1.0.0",
  "title": "Pick a Date",
  "category": "form",
  "description": "Include a calendar-based date picker in your form with date range validation. Features customizable minimum and maximum date ranges (year, month, day), optional date range validation, field width control, required field validation, placeholder text, help text (description), and custom error messages. Perfect for booking dates, event registration, birthdate selection, or appointment scheduling. Must be used inside a Form Block. Pro version with advanced form controls.",
  "source": "pro",
  "attributes": {
    "block_id": {
      "type": "string",
      "required": true,
      "description": "Unique 4-character hex identifier for the block"
    },
    "labelss": {
      "type": "string",
      "default": "Date",
      "description": "Field label text"
    },
    "hlpTxt": {
      "type": "boolean",
      "default": false,
      "description": "Enable help text (description)"
    },
    "desctxt": {
      "type": "string",
      "default": "Description",
      "description": "Help text content (when hlpTxt is true)"
    },
    "reqTgl": {
      "type": "boolean",
      "default": false,
      "description": "Make field required"
    },
    "descPoss": {
      "type": "string",
      "default": "top",
      "enum": ["top", "bottom"],
      "description": "Help text position relative to field"
    },
    "placeholder": {
      "type": "string",
      "default": "Date",
      "description": "Placeholder text shown in empty input"
    },
    "valDate": {
      "type": "boolean",
      "default": false,
      "description": "Enable date range validation using min/max values"
    },
    "minYear": {
      "type": "number",
      "default": 1965,
      "description": "Minimum allowed year (when valDate is true)"
    },
    "minDay": {
      "type": "number",
      "default": 1,
      "description": "Minimum allowed day of month (1-31, when valDate is true)"
    },
    "minMonth": {
      "type": "number",
      "default": 1,
      "description": "Minimum allowed month (1-12, when valDate is true)"
    },
    "maxYear": {
      "type": "number",
      "default": 2085,
      "description": "Maximum allowed year (when valDate is true)"
    },
    "maxDay": {
      "type": "number",
      "default": 30,
      "description": "Maximum allowed day of month (1-31, when valDate is true)"
    },
    "maxMonth": {
      "type": "number",
      "default": 12,
      "description": "Maximum allowed month (1-12, when valDate is true)"
    },
    "inpSz": {
      "type": "object",
      "default": {"md": "100", "unit": "%"},
      "description": "Field width (percentage or px)",
      "responsive": true
    },
    "error": {
      "type": "string",
      "default": "This field is required.",
      "description": "Error message for validation failure"
    },
    "uniqueid": {
      "type": "string",
      "default": "",
      "description": "Unique field identifier for form submission"
    }
  },
  "editingGuidelines": {
    "safeToModify": [
      "labelss",
      "desctxt",
      "placeholder",
      "minYear",
      "minDay",
      "minMonth",
      "maxYear",
      "maxDay",
      "maxMonth",
      "error",
      "inpSz"
    ],
    "requiresValidation": [
      "hlpTxt",
      "reqTgl",
      "descPoss",
      "valDate"
    ],
    "dangerous": [
      "block_id",
      "uniqueid"
    ]
  },
  "styleDependencies": [
    "Form Block parent styles",
    "Date picker JavaScript library",
    "Calendar UI component",
    "Date validation logic"
  ],
  "commonUseCases": [
    "Event registration",
    "Appointment booking",
    "Birthdate selection",
    "Reservation dates",
    "Application deadlines",
    "Travel dates",
    "Availability calendar",
    "Scheduling forms"
  ],
  "relatedBlocks": [
    "tpgb/tp-form-block",
    "tpgb/tp-form-time-field",
    "tpgb/tp-form-submit-button"
  ],
  "capabilities": [
    "Customizable label text",
    "Calendar-based date picker",
    "Custom placeholder text",
    "Optional date range validation",
    "Minimum date constraints (year, month, day)",
    "Maximum date constraints (year, month, day)",
    "Required field validation",
    "Custom error messages",
    "Responsive width control",
    "Help text with top/bottom positioning",
    "Unique field ID for form handling",
    "Inline display support with submit button",
    "Wide date range support (1965-2085 default)"
  ],
  "usesContext": [],
  "supports": {
    "anchor": true,
    "align": ["wide", "full"]
  },
  "innerBlocksAllowed": false,
  "parentBlockRequired": true,
  "ancestorBlock": "tpgb/tp-form-block",
  "examples": [
    {
      "description": "Simple date picker",
      "attributes": {
        "block_id": "a1b2",
        "labelss": "Select Date",
        "placeholder": "Pick a date",
        "reqTgl": true
      }
    },
    {
      "description": "Birthdate with age restriction",
      "attributes": {
        "block_id": "c3d4",
        "labelss": "Date of Birth",
        "placeholder": "MM/DD/YYYY",
        "valDate": true,
        "minYear": 1920,
        "maxYear": 2010,
        "reqTgl": true,
        "hlpTxt": true,
        "desctxt": "You must be at least 18 years old",
        "descPoss": "bottom"
      }
    },
    {
      "description": "Appointment booking with future dates",
      "attributes": {
        "block_id": "e5f6",
        "labelss": "Appointment Date",
        "placeholder": "Choose date",
        "valDate": true,
        "minYear": 2025,
        "minMonth": 1,
        "minDay": 1,
        "maxYear": 2026,
        "maxMonth": 12,
        "maxDay": 31,
        "reqTgl": true
      }
    }
  ]
}
