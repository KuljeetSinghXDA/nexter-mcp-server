{
  "blockName": "tpgb/tp-cta-banner",
  "version": "1.0.0",
  "title": "CTA Banner",
  "category": "marketing",
  "description": "Create eye-popping call-to-action banners with 8 unique styles, image backgrounds, hover effects, and extensive typography controls. Features title, subtitle, and description fields with normal/hover color states. Perfect for promotional banners, product advertisements, special offers, and conversion-focused sections.",
  "source": "pro",
  "attributes": {
    "block_id": {
      "type": "string",
      "required": true,
      "description": "Unique 4-character hex identifier for the block"
    },
    "styleType": {
      "type": "string",
      "default": "style-1",
      "enum": ["style-1", "style-2", "style-3", "style-4", "style-5", "style-6", "style-7", "style-8"],
      "description": "CTA banner visual style (8 options)"
    },
    "bannerImage": {
      "type": "object",
      "default": {"url": ""},
      "description": "Background image for banner"
    },
    "imageSize": {
      "type": "string",
      "default": "full",
      "description": "WordPress image size for banner image"
    },
    "Title": {
      "type": "string",
      "default": "Exclusive Offers",
      "description": "Main banner title/headline"
    },
    "subTitle": {
      "type": "string",
      "default": "Never Before",
      "description": "Banner subtitle/tagline"
    },
    "desc": {
      "type": "string",
      "default": "",
      "description": "Banner description text (optional)"
    },
    "hoverStyle": {
      "type": "string",
      "default": "cta_img_vertical",
      "enum": ["cta_img_vertical", "cta_img_horizontal", "cta_img_zoom", "cta_img_fade"],
      "description": "Image hover effect type"
    },
    "titleTypo": {
      "type": "object",
      "default": {"openTypography": 0},
      "description": "Typography for title"
    },
    "titleColor": {
      "type": "string",
      "default": "",
      "description": "Title text color (normal state)"
    },
    "titlehoverColor": {
      "type": "string",
      "default": "",
      "description": "Title text color (hover state)"
    },
    "subtitleTypo": {
      "type": "object",
      "default": {"openTypography": 0},
      "description": "Typography for subtitle"
    },
    "subtitleColor": {
      "type": "string",
      "default": "",
      "description": "Subtitle text color (normal state)"
    },
    "subtitlehoverColor": {
      "type": "string",
      "default": "",
      "description": "Subtitle text color (hover state)"
    },
    "showBlockContent": {
      "type": "boolean",
      "default": true,
      "description": "Show/hide block content"
    }
  },
  "editingGuidelines": {
    "safeToModify": [
      "Title",
      "subTitle",
      "desc",
      "bannerImage",
      "imageSize",
      "titleTypo",
      "titleColor",
      "titlehoverColor",
      "subtitleTypo",
      "subtitleColor",
      "subtitlehoverColor"
    ],
    "requiresValidation": [
      "styleType",
      "hoverStyle"
    ],
    "dangerous": [
      "block_id"
    ]
  },
  "styleDependencies": [
    "Image hover effects (vertical, horizontal, zoom, fade)",
    "CSS transitions for hover states",
    "Background image positioning",
    "Responsive typography",
    "Color transitions on hover"
  ],
  "commonUseCases": [
    "Promotional banners",
    "Special offer announcements",
    "Product advertisements",
    "Event promotions",
    "Sales and discount banners",
    "Newsletter signup CTAs",
    "Free trial offers",
    "Limited-time deals",
    "Download/lead magnet banners",
    "Service highlights"
  ],
  "relatedBlocks": [
    "tpgb/tp-button",
    "tpgb/tp-heading-animation",
    "tpgb/tp-creative-image",
    "tpgb/tp-infobox"
  ],
  "capabilities": [
    "8 unique visual styles with different layouts",
    "Background image with WordPress size selection",
    "4 image hover effects (vertical, horizontal, zoom, fade)",
    "Title, subtitle, and description fields",
    "Normal and hover color states for all text",
    "Separate typography controls for title and subtitle",
    "Responsive typography adjustments",
    "Optional description text",
    "Full HTML support in description",
    "Background overlay options (per style)",
    "Flexible content positioning (per style)",
    "Border and shadow styling options"
  ],
  "usesContext": [],
  "supports": {
    "align": ["wide", "full"]
  },
  "innerBlocksAllowed": false,
  "parentBlockRequired": false,
  "examples": [
    {
      "description": "Simple promotional banner (style-1)",
      "attributes": {
        "block_id": "a1b2",
        "styleType": "style-1",
        "bannerImage": {"url": "/promo-bg.jpg"},
        "Title": "50% OFF Sale",
        "subTitle": "Limited Time Only",
        "desc": "Shop now and save big on all products",
        "hoverStyle": "cta_img_zoom"
      }
    },
    {
      "description": "Product showcase banner with hover effect",
      "attributes": {
        "block_id": "c3d4",
        "styleType": "style-3",
        "bannerImage": {"url": "/product.jpg"},
        "Title": "New Arrival",
        "subTitle": "Premium Collection",
        "hoverStyle": "cta_img_vertical",
        "titleColor": "#ffffff",
        "subtitleColor": "#f0f0f0"
      }
    },
    {
      "description": "Custom styled CTA with hover colors",
      "attributes": {
        "block_id": "e5f6",
        "styleType": "style-5",
        "Title": "Download Free Guide",
        "subTitle": "Learn the Secrets",
        "titleTypo": {"openTypography": 1, "size": {"md": "42", "unit": "px"}, "weight": "700"},
        "titleColor": "#2c3e50",
        "titlehoverColor": "#667eea",
        "subtitleColor": "#7f8c8d",
        "subtitlehoverColor": "#27ae60"
      }
    },
    {
      "description": "Minimal banner with fade effect (style-8)",
      "attributes": {
        "block_id": "g7h8",
        "styleType": "style-8",
        "bannerImage": {"url": "/minimal-bg.jpg"},
        "Title": "Start Your Journey",
        "subTitle": "Today",
        "hoverStyle": "cta_img_fade"
      }
    }
  ]
}
