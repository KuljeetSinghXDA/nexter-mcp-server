{
  "blockName": "tpgb/tp-image",
  "version": "1.0.0",
  "title": "Image",
  "category": "media",
  "description": "Enhanced image block with advanced styling options including filters, opacity, custom sizing, captions, linking, and hover effects. Supports responsive sizing and object-fit properties for perfect image display.",
  "source": "free",
  "attributes": {
    "block_id": {
      "type": "string",
      "required": true,
      "description": "Unique 4-character hex identifier for the block"
    },
    "tImg": {
      "type": "object",
      "default": {"url": "", "Id": ""},
      "description": "Image source URL and media library ID"
    },
    "iSize": {
      "type": "string",
      "default": "full",
      "description": "WordPress image size (thumbnail, medium, large, full, or custom)"
    },
    "tiAlign": {
      "type": "object",
      "default": {"md": "", "sm": "", "xs": ""},
      "description": "Image alignment (left, center, right)",
      "responsive": true
    },
    "tiLink": {
      "type": "object",
      "default": {"url": "", "target": "", "nofollow": ""},
      "description": "Optional link for the image"
    },
    "tiCap": {
      "type": "string",
      "default": "none",
      "enum": ["none", "caption", "custom"],
      "description": "Caption type: none, image caption, or custom text"
    },
    "capimg": {
      "type": "string",
      "default": "",
      "description": "Image caption from media library"
    },
    "ctmCap": {
      "type": "string",
      "source": "html",
      "selector": ".tpgb-image-caption",
      "default": "",
      "description": "Custom caption HTML content"
    },
    "iWidth": {
      "type": "object",
      "default": {"md": "", "unit": "px"},
      "description": "Image width (fixed)",
      "responsive": true
    },
    "imWidth": {
      "type": "object",
      "default": {"md": "", "unit": "px"},
      "description": "Image max-width",
      "responsive": true
    },
    "iHeig": {
      "type": "object",
      "default": {"md": "", "unit": "px"},
      "description": "Image height",
      "responsive": true
    },
    "imgFit": {
      "type": "object",
      "default": {"md": ""},
      "description": "CSS object-fit property (cover, contain, fill, none, scale-down)",
      "responsive": true
    },
    "inOpa": {
      "type": "string",
      "default": "",
      "description": "Image opacity (0-1)"
    },
    "iHOpa": {
      "type": "string",
      "default": "",
      "description": "Image opacity on hover (0-1)"
    },
    "inFilt": {
      "type": "object",
      "default": {"openFilter": false},
      "description": "CSS filter effects (blur, brightness, contrast, grayscale, hue-rotate, saturate, sepia)"
    }
  },
  "editingGuidelines": {
    "safeToModify": [
      "tImg",
      "tiAlign",
      "tiLink",
      "capimg",
      "ctmCap",
      "iWidth",
      "imWidth",
      "iHeig",
      "inOpa",
      "iHOpa",
      "inFilt"
    ],
    "requiresValidation": [
      "iSize",
      "tiCap",
      "imgFit"
    ],
    "dangerous": [
      "block_id"
    ]
  },
  "styleDependencies": [
    "Image styling CSS",
    "Caption styling",
    "Filter effects CSS",
    "Hover transition effects",
    "Responsive sizing"
  ],
  "commonUseCases": [
    "Featured images",
    "Product photos",
    "Team member photos",
    "Logo display",
    "Icon graphics",
    "Linked images (banners, ads)",
    "Gallery items",
    "Blog post images"
  ],
  "relatedBlocks": [
    "tpgb/tp-creative-image",
    "tpgb/tp-heading-title",
    "tpgb/tp-button",
    "tpgb/tp-container"
  ],
  "capabilities": [
    "Custom image sizing (width, height, max-width)",
    "Object-fit control",
    "Image alignment",
    "Link support with target and nofollow",
    "Caption display (media library or custom)",
    "Opacity control (normal and hover)",
    "CSS filter effects",
    "Responsive sizing",
    "Hover effects"
  ],
  "usesContext": [],
  "supports": {
    "anchor": true,
    "align": ["wide", "full"]
  },
  "innerBlocksAllowed": false,
  "parentBlockRequired": false,
  "examples": [
    {
      "description": "Simple centered image",
      "attributes": {
        "block_id": "a1b2",
        "tImg": {"url": "https://example.com/image.jpg", "Id": "123"},
        "tiAlign": {"md": "center"},
        "iSize": "large"
      }
    },
    {
      "description": "Linked image with hover effect",
      "attributes": {
        "block_id": "c3d4",
        "tImg": {"url": "https://example.com/banner.jpg", "Id": "456"},
        "tiLink": {"url": "https://example.com/products", "target": "_blank"},
        "inOpa": "1",
        "iHOpa": "0.8"
      }
    },
    {
      "description": "Image with custom size and filter",
      "attributes": {
        "block_id": "e5f6",
        "tImg": {"url": "https://example.com/photo.jpg", "Id": "789"},
        "iWidth": {"md": "400", "unit": "px"},
        "iHeig": {"md": "300", "unit": "px"},
        "imgFit": {"md": "cover"},
        "inFilt": {"openFilter": true, "grayscale": 100}
      }
    }
  ]
}
