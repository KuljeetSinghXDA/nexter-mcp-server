{
  "blockName": "tpgb/tp-form-radio-button",
  "version": "1.0.0",
  "title": "Radio Button",
  "category": "form",
  "description": "Add radio buttons to allow selecting a single option from a list of choices. Features customizable option labels and values, vertical or horizontal layout, border radius styling (round by default), field width control, required field validation, help text (description), and custom error messages. Perfect for single-select choices, questionnaires, or exclusive options. Must be used inside a Form Block. Pro version with advanced form controls.",
  "source": "pro",
  "attributes": {
    "block_id": {
      "type": "string",
      "required": true,
      "description": "Unique 4-character hex identifier for the block"
    },
    "labelss": {
      "type": "string",
      "default": "Radio",
      "description": "Field label text"
    },
    "fldOptions": {
      "type": "array",
      "default": [{"fldLabel": " Enter Label", "fldValue": " Enter Value"}],
      "repeaterField": true,
      "description": "Array of radio options with label and value pairs"
    },
    "optPos": {
      "type": "string",
      "default": "vertical",
      "enum": ["vertical", "horizontal"],
      "description": "Options layout orientation"
    },
    "reqTgl": {
      "type": "boolean",
      "default": false,
      "description": "Make field required (one option must be selected)"
    },
    "hlpTxt": {
      "type": "boolean",
      "default": false,
      "description": "Enable help text (description)"
    },
    "desctxt": {
      "type": "string",
      "default": "Description",
      "description": "Help text content (when hlpTxt is true)"
    },
    "descPoss": {
      "type": "string",
      "default": "top",
      "enum": ["top", "bottom"],
      "description": "Help text position relative to field"
    },
    "inpSz": {
      "type": "object",
      "default": {"md": "100", "unit": "%"},
      "description": "Field width (percentage or px)",
      "responsive": true
    },
    "bRadius": {
      "type": "string",
      "default": "round",
      "enum": ["square", "round"],
      "description": "Radio button border radius style (default: round)"
    },
    "error": {
      "type": "string",
      "default": "This field is required.",
      "description": "Error message for validation failure"
    },
    "uniqueid": {
      "type": "string",
      "default": "",
      "description": "Unique field identifier for form submission"
    }
  },
  "editingGuidelines": {
    "safeToModify": [
      "labelss",
      "fldOptions",
      "desctxt",
      "error",
      "inpSz"
    ],
    "requiresValidation": [
      "optPos",
      "reqTgl",
      "hlpTxt",
      "descPoss",
      "bRadius"
    ],
    "dangerous": [
      "block_id",
      "uniqueid"
    ]
  },
  "styleDependencies": [
    "Form Block parent styles",
    "Radio input styling",
    "Flexbox layout for options",
    "Border radius for radio shape"
  ],
  "commonUseCases": [
    "Single-choice questions",
    "Survey responses",
    "Gender selection",
    "Payment method",
    "Shipping options",
    "Rating scales",
    "Yes/No questions",
    "Size selection",
    "Product variants"
  ],
  "relatedBlocks": [
    "tpgb/tp-form-block",
    "tpgb/tp-form-checkbox-button",
    "tpgb/tp-form-submit-button"
  ],
  "capabilities": [
    "Customizable label text",
    "Multiple radio options (single selection)",
    "Custom label and value pairs",
    "2 layout orientations (vertical, horizontal)",
    "Required field validation",
    "Custom error messages",
    "2 border radius styles (square, round)",
    "Responsive width control",
    "Help text with top/bottom positioning",
    "Unique field ID for form handling",
    "Inline display support with submit button",
    "Dynamic option management"
  ],
  "usesContext": [],
  "supports": {
    "anchor": true,
    "align": ["wide", "full"]
  },
  "innerBlocksAllowed": false,
  "parentBlockRequired": true,
  "ancestorBlock": "tpgb/tp-form-block",
  "examples": [
    {
      "description": "Simple single-choice question",
      "attributes": {
        "block_id": "a1b2",
        "labelss": "How did you hear about us?",
        "fldOptions": [
          {"fldLabel": "Search Engine", "fldValue": "search"},
          {"fldLabel": "Social Media", "fldValue": "social"},
          {"fldLabel": "Friend Referral", "fldValue": "referral"},
          {"fldLabel": "Advertisement", "fldValue": "ad"}
        ],
        "optPos": "vertical",
        "reqTgl": true
      }
    },
    {
      "description": "Horizontal rating scale",
      "attributes": {
        "block_id": "c3d4",
        "labelss": "How would you rate our service?",
        "fldOptions": [
          {"fldLabel": "Poor", "fldValue": "1"},
          {"fldLabel": "Fair", "fldValue": "2"},
          {"fldLabel": "Good", "fldValue": "3"},
          {"fldLabel": "Excellent", "fldValue": "4"}
        ],
        "optPos": "horizontal",
        "reqTgl": true,
        "hlpTxt": true,
        "desctxt": "Please select one option",
        "descPoss": "bottom"
      }
    },
    {
      "description": "Yes/No question with square style",
      "attributes": {
        "block_id": "e5f6",
        "labelss": "Would you recommend us?",
        "fldOptions": [
          {"fldLabel": "Yes", "fldValue": "yes"},
          {"fldLabel": "No", "fldValue": "no"}
        ],
        "optPos": "horizontal",
        "bRadius": "square",
        "reqTgl": true
      }
    }
  ]
}
