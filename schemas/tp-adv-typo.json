  ],
  "usesContext": [],
  "supports": {
    "align": ["wide", "full"]
  },
  "innerBlocksAllowed": false,
  "parentBlockRequired": false,
  "examples": [
    {
      "description": "Gradient stroke text",
      "attributes": {
        "block_id": "a1b2",
        "typoText": "Creative Typography",
        "strokeFill": true,
        "gradientTgl": true,
        "strokeWidth": {"md": "2", "unit": "px"},
        "strokeNGColor": "linear-gradient(90deg, #667eea 0%, #764ba2 100%)",
        "fillNColor": "transparent"
      }
    },
    {
      "description": "Marquee scrolling announcement",
      "attributes": {
